<div id="score-chart">
<%= render 'score_chart' %>
</div>

<br/>
<div id="score-errors">
</div>
<%= form_for @score_form, url: :refresh_score_admin_supports, html: {id: "score-form", class: "form-horizontal"}, remote: true do |form| %>
<table class="table table-striped table-hover">
  <tr>
    <th>
        <%= t("support.SUPPORT_DATE") %>
    </th>
    <td>
        <div class="form-inline">
          <div class='input-group date datetimepicker'>
            <%= form.text_field :start_date, :data => {:date_format => 'YYYY/MM/DD'}, :class => 'form-control', placeholder: 'YYYY/MM/DD'  %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
          <label class="control-label">
            <%= t("access_log.ACC_ACCESSLOG_SEARCHTABLE3") %>
          </label>
          <div class='input-group date datetimepicker'>
            <%= form.text_field :end_date, :data => {:date_format => 'YYYY/MM/DD'}, :class => 'form-control', placeholder: 'YYYY/MM/DD'  %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
          <label class="control-label">
            <%= t("access_log.ACC_ACCESSLOG_SEARCHTABLE4") %>
          </label>
          <label class="control-label">
            <%= t("access_log.ACC_ACCESSLOG_SEARCHTABLE5") %>
          </label>
        </div>
    </td>
    <td>
      <%= form.submit t("common.COMMON_SEARCH"), :name => "", :class => "btn btn-default ceas-button-margin-5" %>
    </td>
  </tr>
</table>
<% end %>
