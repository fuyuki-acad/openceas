<br/>
<%= form_tag url_for(action: :refresh_detail), class: "form-horizontal", remote: true do %>
  <%= hidden_field_tag :page %>
<div class="panel panel-default">
  <div class="panel-body">
    <div id="detail-errors">
    </div>
    <table class="table table-striped table-hover">
      <tr>
        <th><%= t("support.SUPPORT_DATE") %></th>
        <td>
          <div class="form-inline">
            <div class='input-group date datetimepicker'>
              <%= text_field_tag :start_date, @start_date, :data => {:date_format => 'YYYY/MM/DD'}, :class => 'form-control', placeholder: 'YYYY/MM/DD'  %>
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
            <label class="control-label">
              <%= t("access_log.ACC_ACCESSLOG_SEARCHTABLE3") %>
            </label>
            <div class='input-group date datetimepicker'>
              <%= text_field_tag :end_date, @end_date, :data => {:date_format => 'YYYY/MM/DD'}, :class => 'form-control', placeholder: 'YYYY/MM/DD'  %>
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
            <label class="control-label">
              <%= t("access_log.ACC_ACCESSLOG_SEARCHTABLE4") %>
            </label>
            <label class="control-label">
              <%= t("access_log.ACC_ACCESSLOG_SEARCHTABLE5") %>
            </label>
          </div>
        </td>
      </tr>

      <tr>
        <th><%= t("support.SUPPORT_SCORE") %></th>
        <td>
          <div class="form-inline">
            <%= text_field_tag :start_score, @start_score, :class => 'form-control' %>
            <label class="control-label">
              <%= t("access_log.ACC_ACCESSLOG_SEARCHTABLE3") %>
            </label>
            <%= text_field_tag :end_score, @end_score, :class => 'form-control' %>
            <label class="control-label">
              <%= t("access_log.ACC_ACCESSLOG_SEARCHTABLE4") %>
            </label>

          </div>
        </td>
      </tr>
    </table>
  </div>
</div>

<div class="text-center">
  <%= submit_tag t("common.COMMON_SEARCH"), :name => "", id: "btn_support_detail", :class => "btn btn-default ceas-button-margin-5" %>
</div>
<% end %>

<br/>
<div class="panel panel-default">
  <div class="panel-body">
    <div id="detail-result">
      <%= render 'detail_result' %>
    </div>
  </div>
</div>
