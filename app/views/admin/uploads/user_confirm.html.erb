<% breadcrumb :admin_user_upload_confirm %>

<!-- スマートフォンタイトル　-->
<h5 class="visible-xs visible-sm">
  <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
  <%= t("registerUsrList1.PRI_REG_UPLOADLIST_TITLE2") %>
</h5>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= t("registerUsrList1.PRI_REG_IMPORTLIST_EXPLANATION1") %>
      </div>
    </div>
  </div>
</div>

<!-- 確認リスト -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <!-- ファイル名 -->
          <tr>
            <td class="col-xs-4">
              <%= t("registerUsrList1.PRI_REG_IMPORTLIST_TABLELEFT1") %>
            </td>
            <td class="col-xs-12">
              <%= @csv.file.original_filename %>
            </td>
          </tr>

          <!-- ファイルサイズ -->
          <tr>
            <td>
              <%= t("registerUsrList1.PRI_REG_IMPORTLIST_TABLELEFT2") %>
            </td>
            <td>
              <%= @csv.file.size %>
            </td>
          </tr>
        </table>
      </div>
    </div>

    <div class="text-center">
      <div class="btn-group">
        <%= link_to t("common.COMMON_REGISTER"), {:action => :user_import_file}, {:class => "btn btn-primary ceas-button-margin-5"} %>
        <%= link_to t("common.COMMON_RETURN"), :back, {:class => "btn btn-default ceas-button-margin-5"} %>
      </div>
    </div>
  </div>
</div>
