<% breadcrumb :admin_course_uploads %>

<!-- スマートフォンタイトル　-->
<h5 class="visible-xs visible-sm">
  <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
  <%= t("registerCourseList1.PRI_REG_UPLOADLIST_TITLE2") %>
</h5>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <p class="annotation">
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION1") %>
      <br/>
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION2") %>
    </p>

    <div class="text-center">
      <div class="btn-group">
        <%= link_to t("registerCourseList1.PRI_REG_UPLOADLIST_SAMPLE"), {:action => :course_sample_file}, {class: "btn btn-default", target: "_blank"} %>
      </div>
    </div>
  </div>
</div>

<!-- 説明文2 -->
<div class="row">
  <div class="col-sm-12">
    <p class="annotation">
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION5") %><br/>
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION6") %><br/>
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION7") %><br/>
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION15") %><br/>
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION8") %><br/>
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION9") %><br/>
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION10") %><br/>
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION11") %><br/>
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION14") %><br/>
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION12") %>
    </p>
  </div>
</div>

<!-- 説明文3 -->
<div class="row">
  <div class="col-sm-12">
    <p class="annotation">
      <%= t("registerCourseList1.PRI_REG_UPLOADLIST_EXPLANATION13_html") %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t("registerCourseList1.PRI_REG_UPLOADLIST_UPLOADEXPLANATION1") %>
        </h3>
      </div>
      <div class="panel-body">
        <%= form_for :upload, :url => {:action => :course_confirm} do |form| %>
          <div class="col-xs-12 col-sm-4">
            <%= form.file_field :file %>
          </div>
          <div class="col-xs-6 col-sm-4">
            <%= form.check_box :not_overwrite, {:checked => true}, true, nil %>
            <%= t("registerCourseList1.PRI_REG_UPLOADLIST_UPLOADEXPLANATION2") %>
          </div>
          <div class="col-xs-6 col-sm-4">
            <%= form.submit t('registerCourseList1.PRI_REG_UPLOADLIST_UPLOADEXPLANATION3'), class: 'btn btn-default' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if !course_file_empty? %>
<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= t("registerCourseList1.PRI_REG_UPLOADLIST_UPLOADEXPLANATION4") %>
        <%= link_to t("common.COMMON_DELETE"), {:action => :course_destroy_file}, :data => {:confirm => t("registerCourseList1.PRI_REG_UPLOADLIST_CHECKELETE")}, :class => "btn btn-danger", :method => :delete %>
      </div>
    </div>
  </div>
</div>
<% end %>
