<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <!-- タイトル -->
          <tr>
            <td class="col-xs-3">
              <%= t("common.COMMON_SUBJECT") %>
              <span class='badge badge-essencial'>
                <%= t("common.COMMON_ESSENCIAL") %>
              </span>
            </td>
            <td class="col-xs-9">
              <%= f.text_field :title, {:class => 'form-control', :maxlength => '128'} %>
            </td>
          </tr>

          <!-- 告知内容 -->
          <tr>
            <td class="col-xs-3">
              <%= t("general_announcement.COMMONGENERALINFO_INFOMATION") %>
              <span class='badge badge-essencial'>
                <%= t("common.COMMON_ESSENCIAL") %>
              </span>
            </td>
            <td class="col-xs-9">
              <%= f.text_area :content, {:class => 'form-control', :rows => '10'} %>
            </td>
          </tr>

          <!-- 告知方法 -->
          <tr>
            <td class="col-xs-3">
              <%= t("general_announcement.GEN_GENERALINFO_INFOMATIONWAY") %>
            </td>
            <td class="col-xs-9">
              <%= f.radio_button :type_cd, GeneralAnnouncement::TYPE_LOGIN, :checked => true %> <%= t('general_announcement.GEN_GENERALINFO_BYUSINGLOGIN') %>
              <br/>
              <%= f.radio_button :type_cd, GeneralAnnouncement::TYPE_SYSTEM %> <%= t('general_announcement.GEN_GENERALINFO_BYUSINGSYSTEMINFO') %>
              <% if !@announcement.new_record? %>
                <br/>
                <%= f.radio_button :type_cd, GeneralAnnouncement::TYPE_HIDDEN %> <%= t('general_announcement.GEN_GENERALINFO_HIDE') %>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    </div>

    <div class="text-center">
      <div class="btn-group">
        <%= f.submit t("common.COMMON_REGISTER"),
          {:class => "btn btn-primary ceas-button-margin-5 center-block",
           :onclick => "return checkInfo('"+t("general_announcement.GEN_GENERALINFO_SCRIPT1")+"','"+t("general_announcement.GEN_GENERALINFO_SCRIPT2")+"',
            '"+t("general_announcement.GEN_GENERALINFO_SCRIPT3")+"','generalInfo','title','content');"} %>
        <%= f.button t("common.COMMON_CANCEL"), {:class => "btn btn-default ceas-button-margin-5 center-block", :type => :reset} %>
        <% if !@announcement.new_record? %>
          <%= link_to t("common.COMMON_RETURN"), {:action => :index}, {:class => "btn btn-default ceas-button-margin-5 center-block"} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
