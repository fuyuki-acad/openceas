<!-- 入力フォーム -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <% if @course.new_record? %>
            <%= t('admin.course.PRI_ADM_COU_REGISTERCOURSE_REGISTERCOURSENEW') %>
          <% else %>
            <%= t("admin.course.PRI_ADM_COU_REGISTERCOURSE_EDITCOURSE") %>
          <% end %>
        </h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <% unless @course.new_record? %>
            <!--科目ID-->
            <tr>
              <td class="col-xs-3">
                <%= t('common.COMMON_COURSEID') %>
              </td>
              <td class="col-xs-9">
                <%= @course.id %><br/>
                <%= t('admin.course.PRI_ADM_COU_REGISTERCOURSE_COURSEID', :course_id => @course.id) %>
              </td>
            </tr>
          <% end %>
          <!--科目名称-->
          <tr>
            <td class="col-xs-3">
              <%= t('common.COMMON_COURSENAME') %>
              <span class='badge badge-essencial'><%= t('common.COMMON_ESSENCIAL') %></span>
            </td>
            <td class="col-xs-9">
              <%= f.text_field :course_name, {:class => 'form-control form-course-name', :maxlength => '64'} %>
            </td>
          </tr>
          <!--科目コード-->
          <tr>
            <td>
              <%= t('common.COMMON_COURSECD') %>
              <span class='badge badge-essencial'><%= t('common.COMMON_ESSENCIAL') %></span>
            </td>
            <td>
              <%= f.text_field :course_cd, {:class => 'form-control form-course-code', :maxlength => '128'} %>
              <%= f.hidden_field :sv_course_cd %>
            </td>
          </tr>
          <!--年度-->
          <tr>
            <td>
              <%= t('common.COMMON_SCHOOLYEAR') %>
              <span class='badge badge-essencial'><%= t('common.COMMON_ESSENCIAL') %></span>
            </td>
            <td>
              <%= f.select :school_year, school_year_current_list(:no_blank), {}, {:class => 'form-control form-course-year'} %>
              <%= f.hidden_field :sv_school_year %>
            </td>
          </tr>
          <!--学期-->
          <tr>
            <td>
              <%= t('common.COMMON_SEASON') %>
              <span class='badge badge-essencial'><%= t('common.COMMON_ESSENCIAL') %></span>
            </td>
            <td>
              <%= f.select :season_cd, season_list, {}, {:class => 'form-control form-course-season'} %>
              <%= f.hidden_field :sv_season_cd %>
            </td>
          </tr>
          <!--科目の利用-->
          <tr>
            <td>
              <%= t('common.COMMON_INDIRECTUSE') %>
            </td>
            <td>
              <%= f.radio_button :indirect_use_flag, Settings.COURSE_INDIRECTUSEFLG_DIRECT.to_s %>
              <%= f.label :indirect_use_flag, t('admin.course.PRI_ADM_COU_REGISTERCOURSE_INDIRECTUSEFLG_DIRECT'), value: Settings.COURSE_INDIRECTUSEFLG_DIRECT, class: "label_weight_normal" %><br/>
              <%= f.radio_button :indirect_use_flag, Settings.COURSE_INDIRECTUSEFLG_INDIRECT.to_s %>
              <%= f.label :indirect_use_flag, t('admin.course.PRI_ADM_COU_REGISTERCOURSE_INDIRECTUSEFLG_INDIRECT'), value: Settings.COURSE_INDIRECTUSEFLG_INDIRECT, class: "label_weight_normal" %><br/>
              <%= link_to t("admin.course.PRI_ADM_COU_REGISTERCOURSE_PARENTCOURSE_HELP"), asset_path(t("admin.course.PRI_ADM_COU_REGISTERCOURSE_PARENTCOURSE_HELP_PDF")), {target: "_blank"} %>
            </td>
          </tr>
          <!--親科目-->
          <tr>
            <td>
              <%= t('common.COMMON_PARENTCOURSE') %>
            </td>
            <td>
              <span id="parentCoursePanel">
                <%= f.hidden_field :parent_course_id %>
                <%= f.text_field :parent_course_name, {:class => 'form-control form-course-name', :read_only => true} %>
              </span>

              <%= link_to t("admin.course.PRI_ADM_COU_REGISTERCOURSE_PARENTCOURSE_SETTING"), {:action => :parent_course}, {class: "btn btn-default ceas-button-margin-5", data: {toggle: 'modal', target: '#parent-modal'}} %>
              <%= link_to t("admin.course.PRI_ADM_COU_REGISTERCOURSE_PARENTCOURSE_UNSETTING"), {:action => :parent_course}, {class: "btn btn-default ceas-button-margin-5  clear_parent_course"} %>
              <% if @course.new_record? %>
                <%= t('admin.course.PRI_ADM_COU_REGISTERCOURSE_PARENTCOURSEIDEXPLANATION1') %>
              <% else %>
                <%= t('admin.course.PRI_ADM_COU_REGISTERCOURSE_PARENTCOURSEIDEXPLANATION2') %>
              <% end %>
            </td>
          </tr>
          <!--科目概要-->
          <tr>
            <td>
              <%= t('common.COMMON_COURSEOUTLINE') %>
            </td>
            <td>
              <%= f.cktext_area :overview, {:class => 'form-control', :rows => 5}%>
            </td>
          </tr>
          <!--曜日-->
          <tr>
            <td>
              <%= t('common.COMMON_DAY') %>
            </td>
            <td>
              <%= f.select :day_cd, day_list, {}, {:class => 'form-control form-course-day'} %>
            </td>
          </tr>
          <!--時限-->
          <tr>
            <td>
              <%= t('common.COMMON_HOUR') %>
            </td>
            <td>
              <%= f.select :hour_cd, hour_list, {}, {:class => 'form-control form-course-hour'} %>
            </td>
          </tr>
          <!--担任者名-->
          <% if !@course.new_record?  %>
          <tr>
            <td>
              <%= t('common.COMMON_INSTRUCTORNAME') %>
            </td>
            <td>
              <%= @course.assignd_list.map { |user| user.user_name }.join(", ") %>
            </td>
          </tr>
          <% end %>
          <!--担任者表示名-->
          <tr>
            <td>
              <%= t('common.COMMON_INSTRUCTORNAME_DISP') %>
            </td>
            <td>
              <%= f.text_field :instructor_name, {:class => 'form-control form-instructor', :maxlength => 128} %>
              <%= t('admin.course.PRI_ADM_COU_REGISTERCOURSE_INSTRUCTORNAMEEXAMPLE') %>
            </td>
          </tr>
          <!--系・学科・コース-->
          <tr>
            <td>
              <%= t('common.COMMON_MAJOR') %>
            </td>
            <td>
              <%= f.text_field :major, {:class => 'form-control form-major', :maxlength => 64} %>
              <%= t('admin.course.PRI_ADM_COU_REGISTERCOURSE_MAJOREXAMPLE') %>
            </td>
          </tr>
          <!--Topページからの利用（表示）-->
          <tr>
            <td>
              <%= t('admin.course.COMMON_ADMINISTRATECOURSE_TERMFLG_html') %>
            </td>
            <td>
              <%= f.radio_button :term_flag, "1" %>
              <%= f.label :term_flag, t('common.COMMON_USE'), value: "1", class: "label_weight_normal" %><br/>
              <%= f.radio_button :term_flag, "0" %>
              <%= f.label :term_flag, t('common.COMMON_NOTUSE'), value: "0", class: "label_weight_normal" %><br/>
              <%= t('admin.course.PRI_ADM_COU_REGISTERCOURSE_TERMFLGEXPLANATION') %>
            </td>
          </tr>
          <!--授業回数-->
          <tr>
            <td>
              <%= t('admin.course.COMMON_ADMINISTRATECOURSE_CLASSSESSIONCOUNT') %>
            </td>
            <td>
              <%= f.select :class_session_count, class_session_count_list, {}, {:class => 'form-control form-number-3'} %>
            </td>
          </tr>
          <!--グループフォルダ数-->
          <tr>
            <td>
              <%= t('admin.course.COMMON_ADMINISTRATECOURSE_GROUPFOLDERCOUNT') %>
            </td>
            <td>
              <%= f.select :group_folder_count, group_folder_count_list, {}, {:class => 'form-control form-number-3'} %>
            </td>
          </tr>
          <!--公開科目にする-->
          <tr>
            <td>
              <%= t('admin.course.COMMON_ADMINISTRATECOURSE_OPENCOURSE') %>
            </td>
            <td>
              <%= f.radio_button :open_course_flag, Settings.COURSE_OPENCOURSEFLG_PUBLIC, {:checked => true, :onclick => "changeRadio('registerCourse');"} %>
              <%= f.label :open_course_flag, t('common.COMMON_OPEN'), value: Settings.COURSE_OPENCOURSEFLG_PUBLIC, class: "label_weight_normal" %><br/>
              <%= f.radio_button :open_course_flag, Settings.COURSE_OPENCOURSEFLG_PRIVATE, {:onclick => "changeRadio('registerCourse');"} %>
              <%= f.label :open_course_flag, t('common.COMMON_NOTOPEN'), value: Settings.COURSE_OPENCOURSEFLG_PRIVATE, class: "label_weight_normal" %><br/>
              <%= t('admin.course.PRI_ADM_COU_REGISTERCOURSE_OPENCOURSEEXPLANATION') %>
            </td>
          </tr>
          <!--公開パスワード-->
          <tr>
            <td>
              <%= t('admin.course.COMMON_ADMINISTRATECOURSE_OPENCOURSEPASSWORD') %>
            </td>
            <td>
              <%= f.password_field :open_course_pass, {:class => 'form-control form-password', :maxlength => 64} %>
            </td>
          </tr>
          <!--お知らせ-->
          <tr>
            <td>
              <%= t('common.COMMON_ANNOUNCEMENT') %>
            </td>
            <td>
              <%= f.radio_button :announcement_cd, "1" %>
              <%= f.label :announcement_cd, t('common.COMMON_USE'), value: "1", class: "label_weight_normal" %><br/>
              <%= f.radio_button :announcement_cd, "0" %>
              <%= f.label :announcement_cd, t('common.COMMON_NOTUSE'), value: "0", class: "label_weight_normal" %><br/>
              <%= f.check_box :open_course_announcement_flag %>
              <%= f.label :open_course_announcement_flag, t('admin.course.COMMON_ADMINISTRATECOURSE_OPENCOURSEUSEFLG'), class: "label_weight_normal" %><br/>
            </td>
          </tr>
          <!--ＦＡＱ-->
          <tr>
            <td>
              <%= t('common.COMMON_FAQ') %>
            </td>
            <td>
              <%= f.radio_button :faq_cd, "1" %>
              <%= f.label :faq_cd, t('common.COMMON_USE'), value: "1", class: "label_weight_normal" %><br/>
              <%= f.radio_button :faq_cd, "0" %>
              <%= f.label :faq_cd, t('common.COMMON_NOTUSE'), value: "0", class: "label_weight_normal" %><br/>
              <%= f.check_box :open_course_faq_flag %>
              <%= f.label :open_course_faq_flag, t('admin.course.COMMON_ADMINISTRATECOURSE_OPENCOURSEUSEFLG'), class: "label_weight_normal" %><br/>
            </td>
          </tr>
          <!--未読レポート表示-->
          <tr>
            <td>
              <%= t('common.COMMON_NOTREAD_ASSIGNMENT') %>
            </td>
            <td>
              <%= f.radio_button :unread_assignment_display_cd, "0" %>
              <%= f.label :unread_assignment_display_cd, t('common.COMMON_DO_DISPLAY'), value: "0", class: "label_weight_normal" %><br/>
              <%= f.radio_button :unread_assignment_display_cd, "1" %>
              <%= f.label :unread_assignment_display_cd, t('common.COMMON_DONOT_DISPLAY'), value: "1", class: "label_weight_normal" %>
            </td>
          </tr>
          <!--未読FAQ表示-->
          <tr>
            <td>
              <%= t('common.COMMON_NOTREAD_FAQ') %>
            </td>
            <td>
              <%= f.radio_button :unread_faq_display_cd, "0" %>
              <%= f.label :unread_faq_display_cd, t('common.COMMON_DO_DISPLAY'), value: "0", class: "label_weight_normal" %><br/>
              <%= f.radio_button :unread_faq_display_cd, "1" %>
              <%= f.label :unread_faq_display_cd, t('common.COMMON_DONOT_DISPLAY'), value: "1", class: "label_weight_normal" %>
            </td>
          </tr>
          <!--出席有効IP-->
          <tr>
            <td>
              <%= t('admin.course.COMMON_ADMINISTRATECOURSE_ATTENDANCEIP') %>
            </td>
            <td>
              <%= t('admin.course.COMMON_ADMINISTRATECOURSE_IP1') %>
              <%= f.text_field :attendance_ip1, {:class => 'form-control form-text-15', :maxlength => 15} %>
              <%= t('admin.course.PRI_ADM_COU_REGISTERCOURSE_ATTENDANCEIPEXPLANATION') %><br/>
              <%= t('admin.course.COMMON_ADMINISTRATECOURSE_IP2') %>
              <%= f.text_field :attendance_ip2, {:class => 'form-control form-text-15', :maxlength => 15} %>
              <%= t('admin.course.COMMON_ADMINISTRATECOURSE_IP3') %>
              <%= f.text_field :attendance_ip3, {:class => 'form-control form-text-15', :maxlength => 15} %>
              <%= t('admin.course.COMMON_ADMINISTRATECOURSE_IP4') %>
              <%= f.text_field :attendance_ip4, {:class => 'form-control form-text-15', :maxlength => 15} %>
            </td>
          </tr>
          <!--削除フラグ-->
          <!--
          <%# if !@course.new_record?  %>
            <tr>
              <td>
                <%#= t('admin.course.COMMON_ADMINISTRATECOURSE_DELETEFLG') %>
              </td>
              <td>
                <%#= f.radio_button :delete_flag, "1" %> <%= t('common.COMMON_ON') %><br/>
                <%#= f.radio_button :delete_flag, "0" %> <%= t('common.COMMON_OFF') %>
              </td>
            </tr>
          <%# end %>
          -->
        </table>
      </div>
    </div>

    <div class="text-center">
      <div class="btn-group">
        <%= f.submit t("common.COMMON_REGISTER"),
          {:class => "btn btn-default ceas-button-margin-5 center-block",
           :onclick => "return checkRegisterCourse('registerCourse',
            '"+(@course.new_record? ? "0" : "1")+"','"+t("admin.course.PRI_ADM_COU_REGISTERCOURSE_ERROR1")+"',
            '"+t("admin.course.PRI_ADM_COU_REGISTERCOURSE_ERROR2")+"','"+t("admin.course.PRI_ADM_COU_REGISTERCOURSE_ERROR3")+"',
            '"+t("admin.course.PRI_ADM_COU_REGISTERCOURSE_ERROR4")+"','"+t("admin.course.PRI_ADM_COU_REGISTERCOURSE_ERROR5")+"',
            '"+t("admin.course.PRI_ADM_COU_REGISTERCOURSE_ERROR6")+"','"+t("admin.course.PRI_ADM_COU_REGISTERCOURSE_ERROR7")+"',
            '"+t("admin.course.PRI_ADM_COU_REGISTERCOURSE_ERROR8")+"','"+t("admin.course.PRI_ADM_COU_REGISTERCOURSE_ERROR9")+"',
            '"+t("admin.course.PRI_ADM_COU_REGISTERCOURSE_ERROR10")+"')"} %>
        <%= f.button t("common.COMMON_CANCEL"), {:class => "btn btn-default ceas-button-margin-5 center-block", :type => :reset} %>
        <%= link_to t("common.COMMON_RETURN"), "#{admin_courses_path}?#{session[:course_search_parama]}" , {:class => "btn btn-default ceas-button-margin-5 center-block"} %>
      </div>
    </div>
  </div>
</div>
