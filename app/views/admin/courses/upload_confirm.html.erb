<!-- スマートフォンタイトル　-->
<h5 class="visible-xs visible-sm">
  <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
  <%= t('admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_LOADTARGETFILERESULT') %>
</h5>

<!-- CSVファイルチェック内容　-->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t('admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_LOADTARGETFILERESULT') %>
        </h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <!-- データ件数 -->
          <tr>
            <td class="col-xs-4">
              <%= t('admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_RECORDCOUNTTITLE') %>
            </td>
            <td class="col-xs-8">
              <%= @courses.count %>
            </td>
          </tr>

          <!-- 正常件数 -->
          <tr>
            <td class="col-xs-4">
              <%= t('admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_CORRECTCOUNTTITLE') %>
            </td>
            <td class="col-xs-8">
              <%= @courses.count - @errors.count %>
            </td>
          </tr>

          <!-- 異常件数 -->
          <tr>
            <td class="col-xs-4">
              <%= t('admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_ILLEGALCOUNTTITLE') %>
            </td>
            <td class="col-xs-8">
              <%= @errors.count %>
            </td>
          </tr>
        </table>
      </div>
    </div>

    <div class="text-center">
      <div class="btn-group">
        <% if @errors.count == 0%>
        <%= link_to t("admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_DELETESTARTBUTTON"), {:action => :upload_destroy}, {:class => "btn btn-default ceas-button-margin-5 center-block", data:{confirm: t('admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_CONFIRMEXECMESSAGE')}} %>
        <% end %>
        <%= link_to t("common.COMMON_RETURN"), {:action => :bulk_delete_search}, {:class => "btn btn-default ceas-button-margin-5 center-block"} %>
      </div>
    </div>
  </div>
</div>


<!-- alertメッセージ -->
<% if @errors.count > 0%>
  <div class="row">
    <div class="col-xs-12">
      <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= t('admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_CHECKERRORDETAIL') %>
        <%= link_to t("admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_CHECKERRORFILE"), {:action => :upload_error}, {:class => "btn btn-default", :target => "_blank"} %>
      </div>
    </div>
  </div>
<% end %>

<!-- 削除結果 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t('admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_DELETERESULTTITLE') %>
        </h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <!-- 削除予定件数 -->
          <tr>
            <td class="col-xs-4">
              <%= t('admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_DELETIONSCHEDULELISTCOUNTTITLE') %>
            </td>
            <td class="col-xs-8">
            <%= @courses.count - @errors.count %>
            </td>
          </tr>

          <!-- 削除失敗件数 -->
          <tr>
            <td class="col-xs-4">
              <%= t('admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_ERRORCOUNTTITLE') %>
            </td>
            <td class="col-xs-8">
              <%= @delete_error_count %>
            </td>
          </tr>

          <!-- 科目ディレクトリ削除件数 -->
          <tr>
            <td class="col-xs-4">
              <%= t('admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_DIRDELETECOUNTTITLE') %>
            </td>
            <td class="col-xs-8">
              <%= @delete_dir_count %>
            </td>
          </tr>

          <!-- 削除完了件数 -->
          <tr>
            <td class="col-xs-4">
              <%= t('admin.course.PRI_ADM_COU_CONFIRMCOURSEBATCHDELETE_COMPLETEDELETECOUNTTITLE') %>
            </td>
            <td class="col-xs-8">
              <%= @delete_count %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
