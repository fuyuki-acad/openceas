<!-- 入力フォーム -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <td class="col-xs-4">
              <%= t("token.description") %>
              <span class='badge badge-essencial'><%= t("common.COMMON_ESSENCIAL") %></span>
            </td>
            <td class="col-xs-8">
              <%= f.text_field :description, {:class => 'form-control', :maxlength => 256} %>
            </td>
          </tr>
          <% unless @token.new_record? %>
          <tr>
            <td class="col-xs-4">
              <%= t("token.access_token") %>
            </td>
            <td class="col-xs-8">
              <%== @token.access_token %>
            </td>
          </tr>
          <% end %>
          <tr>
            <td>
              <%= t("token.expire_date") %>
            </td>
            <td>
              <div class='input-group date datetimepicker form-date'>
                <%= f.text_field :expire_date, :data => {:date_format => 'YYYY/MM/DD'}, :class => 'form-control', placeholder: 'YYYY/MM/DD' %>
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- ボタン -->
<div class="text-center">
  <div class="btn-group">
    <% if @token.new_record? %>
      <%= f.submit t("common.COMMON_REGISTER"), class: "btn btn-warning ceas-button-margin-5 center-block" %>
    <% else %>
      <%= f.submit t("common.COMMON_REVISE"), class: "btn btn-warning ceas-button-margin-5 center-block" %>
    <% end %>
    <%= link_to t("common.COMMON_RETURN"), {:action => :index}, {:class => "btn btn-default center-block"} %>
  </div>
</div>
