<table class="table table table-hover">
  <!-- 動画URL -->
  <tr>
    <td class="col-xs-3">
      <%= t("azure_video.AZURE_VIDEO_URL") %>
      <span class='badge badge-essencial'>
        <%= t("common.COMMON_ESSENCIAL") %>
      </span>
    </td>
    <td class="col-xs-9">
      <%= azure_video.video_url %>
    </td>
  </tr>

  <!-- 操作パネル表示設定 -->
  <tr>
    <td class="col-xs-3">
      <%= t("azure_video.AZURE_PANEL") %>
    </td>
    <td class="col-xs-9">
      <label><%= azure_video.panel_display == AzureVideo::TYPE_PANEL_DISPLAY.to_i ? t('common.COMMON_DISPLAY') : t('common.COMMON_NOTDISPLAY') %></label>
    </td>
  </tr>

  <!-- 視聴完了後の転送 -->
  <tr>
    <td class="col-xs-3">
      <%= t("azure_video.AZURE_FORWARDING") %>
    </td>
    <td class="col-xs-9">
      <label><%= azure_video.forwarding == AzureVideo::TYPE_FORWARDING.to_i ? t('common.COMMON_DO') : t('common.COMMON_NOTDO') %></label>
    </td>
  </tr>

  <% if azure_video.forwarding == AzureVideo::TYPE_FORWARDING.to_i %>
  <!-- 転送URL -->
  <tr>
    <td class="col-xs-3">
      <%= t("azure_video.AZURE_FORWARDING_URL") %>
      <span class='badge badge-essencial'>
        <%= t("common.COMMON_ESSENCIAL") %>
      </span>
    </td>
    <td class="col-xs-9">
      <%= azure_video.forwarding_url %>
    </td>
  </tr>
  <% end %>

  <!-- 初期メッセージ -->
  <tr>
    <td class="col-xs-3">
      <%= t("azure_video.AZURE_INIT_MESSAGE") %>
    </td>
    <td class="col-xs-9">
      <%= azure_video.init_message %>
    </td>
  </tr>

  <!-- 1/4視聴メッセージ -->
  <tr>
    <td class="col-xs-3">
      <%= t("azure_video.AZURE_FIRSTQUARTILE_MESSAGE") %>
    </td>
    <td class="col-xs-9">
      <%= azure_video.firstquartile_message %>
    </td>
  </tr>

  <!-- 1/2視聴メッセージ -->
  <tr>
    <td class="col-xs-3">
      <%= t("azure_video.AZURE_MIDPOINT_MESSAGE") %>
    </td>
    <td class="col-xs-9">
      <%= azure_video.midpoint_message %>
    </td>
  </tr>

  <!-- 3/4視聴メッセージ -->
  <tr>
    <td class="col-xs-3">
      <%= t("azure_video.AZURE_THIRDQUARTILE_MESSAGE") %>
    </td>
    <td class="col-xs-9">
      <%= azure_video.thirdquartile_message %>
    </td>
  </tr>

  <!-- 視聴完了メッセージ -->
  <tr>
    <td class="col-xs-3">
      <%= t("azure_video.AZURE_ENDED_MESSAGE") %>
    </td>
    <td class="col-xs-9">
      <%= azure_video.ended_message %>
    </td>
  </tr>

</table>
