<!-- 表示言語切替 -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="collapseSelectLanguageHeading">
        <!-- スマホタイトル -->
        <h3 class="panel-title visible-xs">
          <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseSelectLanguage" aria-expanded="false" aria-controls="collapseSelectLanguage">
            <%= t("top.COMMONTOP_CHANGELOCALE") %>
            <div class="pull-right">
              <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
            </div>
          </a>
        </h3>

        <!-- PCタイトル -->
        <h3 class="panel-title hidden-xs">
          <%= t("top.COMMONTOP_CHANGELOCALE") %>
        </h3>
      </div>

      <div id="collapseSelectLanguage" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="collapseSelectLanguageHeading">
        <div class="panel-body">
          <div class="form-group">
            <div class="input-group">
              <%= select_tag :language,
                options_for_select([[t('login.LOG_LOGIN_LOCALEJA'), "0"],
                 [t('login.LOG_LOGIN_LOCALEEN'), "1"],
                 [t('login.LOG_LOGIN_LOCALEZH'), "2"],
                 [t('login.LOG_LOGIN_LOCALEZHTW'), "3"]]),
                :class => "form-control select-language"
              %>
              <span class="input-group-btn">
                <%= button_tag t('common.COMMON_CHANGE'), type: 'button', name: 'change_locale', id: 'btnSubmit', class: 'btn btn-primary' %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
