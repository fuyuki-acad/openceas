<% if record && record.errors.any? %>
<div class='col-sm-10 alert alert-dismissable alert-danger'>
  <div id="error_explanation">
    <ul>
    <% record.errors.messages.each do |key, msg| %>
      <% if key.to_s == 'base' %>
        <% msg.each do |error_msg| %>
          <li><%= error_msg %></li>
        <% end %>
      <% else %>
        <% if record.has_error_detail?(key) %>
          <li><%= t("activerecord.attributes.#{record.class.name.downcase}.#{key}") %><%= msg.join("") %></li>
        <% else %>
          <li><%= msg.join("") %></li>
        <% end %>
      <% end %>
    <% end %>
    </ul>
  </div>
</div>
<% end %>
