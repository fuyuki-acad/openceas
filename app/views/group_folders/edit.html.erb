<% breadcrumb :edit_group_folder, @group_folder %>

<!-- スマートフォンタイトル　-->
<h5 class="visible-xs visible-sm">
  <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
  <%= t("group_folder.COMMONGROUPFOLDER_GROUPFOLDERLIST") %>
</h5>

<%= render 'shared/error', :record => @group_folder %>

<!-- 編集フォーム -->
<%= form_for :group_folder, :url => {:action => "update", :id => @group_folder}, :html => {:class => "form-horizontal", :method => :patch} do |form| %>
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <td class="col-xs-3">
              <%= t("group_folder.COMMONGROUPFOLDER_GROUPNAME") %>
            </td>
            <td>
              <%= form.text_field :title, {:class => 'form-control', :maxlength => 128} %>
            </td>
          </tr>
          <tr>
            <td>
              <%= t("group_folder.COMMONGROUPFOLDER_GROUPOVERVIEW") %>
            </td>
            <td>
              <%= form.text_area :memo, {:class => 'form-control', :rows => 5} %>
            </td>
          </tr>
        </table>
      </div>
    </div>

    <div class="text-center">
      <div class="btn-group">
        <%= form.submit t("common.COMMON_REGISTER"), :class => "btn btn-primary ceas-button-margin-5 center-block" %>
        <%= link_to t("common.COMMON_RETURN"), {:action => :index, :course_id => @group_folder.course}, {:class => "btn btn-default ceas-button-margin-5 center-block"} %>
      </div>
    </div>
  </div>
</div>
<% end %>
