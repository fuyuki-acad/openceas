<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("common.COMMON_FAQ") } %>

<!-- 科目名称 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <h5>
          <%= @faq.course.course_name %>
        </h5>
      </div>
    </div>
  </div>
</div>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= t("faq.FAQ_CONFIRMFAQQUESTION_EXPLANATION1") %>
        <br />
        <%= t("faq.FAQ_CONFIRMFAQQUESTION_EXPLANATION2") %>
        <br />
        <%= t("faq.FAQ_CONFIRMFAQQUESTION_EXPLANATION3") %>
      </div>
    </div>
  </div>
</div>

<!-- 入力フォーム -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <!-- タイトル -->
          <tr>
            <td class="col-xs-4">
              <%= t("common.COMMON_SUBJECT") %>
            </td>
            <td class="col-xs-8">
              <%= @faq.faq_title %>
            </td>
          </tr>

          <!-- 内容 -->
          <tr>
            <td>
              <%= t("common.COMMON_CONTENT") %>
            </td>
            <td>
              <%== convert_html(@faq.question) %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<%= form_for :faq, :url => {:action => "create"} do |form| %>
<!-- ボタン -->
<div class="text-center">
  <div class="btn-group">
      <%= form.submit t("common.COMMON_REGISTER"), class: "btn btn-primary ceas-button-margin-5 center-block" %>
      <%= link_to t("common.COMMON_REVISE"), {:action => :new, :course_id => @faq.course, :back => true}, {:class => "btn btn-primary ceas-button-margin-5 center-block"} %>
  </div>
</div>
<% end %>
