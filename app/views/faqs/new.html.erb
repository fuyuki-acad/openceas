<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("common.COMMON_FAQ") } %>

<%= render 'shared/error', :record => @faq %>

<!-- 科目名称 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <h5>
          <%= @course.course_name %>
        </h5>
      </div>
    </div>
  </div>
</div>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= t("faq.FAQ_REGISTERFAQQUESTION_EXPLANATION1") %>
        <br/>
        <%= t("faq.FAQ_REGISTERFAQQUESTION_EXPLANATION2") %>
      </div>
    </div>
  </div>
</div>

<%= form_for :faq, :url => {:action => "confirm"}, :html => {:class => "form-horizontal"} do |form| %>
<%= form.hidden_field :course_id %>
<!-- 入力フォーム -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <td class="col-xs-4">
              <%= t("common.COMMON_SUBJECT") %>
              <code><%= t("common.COMMON_ESSENCIAL") %></code>
            </td>
            <td class="col-xs-8">
              <%= form.text_field :faq_title, {:class => 'form-control', :maxlength => 128} %>
            </td>
          </tr>
          <tr>
            <td>
              <%= t("common.COMMON_CONTENT") %>
              <code><%= t("common.COMMON_ESSENCIAL") %></code>
            </td>
            <td>
              <%= form.text_area :question, {:class => 'form-control', :rows => 10} %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- ボタン -->
<div class="text-center">
  <div class="btn-group">
    <%= form.submit t("common.COMMON_REGISTER"), class: "btn btn-warning ceas-button-margin-5 center-block" %>
    <%= form.button t("common.COMMON_CANCEL"), {:class => "btn btn-warning ceas-button-margin-5 center-block", :type => :reset} %>
    <%= link_to t("common.COMMON_RETURN"), {:action => :course, :course_id => @course}, {:class => "btn btn-default center-block"} %>
  </div>
</div>
<% end %>
