<% breadcrumb :faqs %>

<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("faq.FAQ_OPENFAQLISTTOP_THISPAGE") } %>

<!-- アンカー -->
<a id="anchor-top"></a>

<!-- 検索 -->
<div class="row">
  <% if current_user.admin? %>
    <%= form_tag url_for({:action => :index}), :method => :get do %>
      <div class="col-xs-12 col-sm-10">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="col-xs-12 col-sm-6">
              <%= radio_button_tag :type1, "0", true %> <%= t('common.COMMON_COURSENAME') %>
              <%= radio_button_tag :type1, "1", params[:type1] == "1" %> <%= t('common.COMMON_INSTRUCTORNAME') %>
              <%= radio_button_tag :type1, "2", params[:type1] == "2" %> <%= t('common.COMMON_COURSECD') %>

              <div class="input-group">
                <%= text_field_tag :keyword, params[:keyword], {:class => "form-control"} %>
                <span class="input-group-btn">
                  <%= submit_tag t("common.COMMON_SEARCH"), :name => "", :class => "btn btn-default" %>
                </span>
              </div>
            </div>

            <div class="col-xs-12 col-sm-6">
              <%= t("admin.course.PRI_ADM_COU_ADMINSEARCHCOURSE_SEARCHEXPLANATION") %>
              <div class="input-group">
                <div class="col-xs-3">
                  <%= t("common.COMMON_DAY") %>
                  <%= select_tag :day, options_for_select(day_list, params[:day]), {:class => "selectDay"} %>
                </div>
                <div class="col-xs-3">
                  <%= t("common.COMMON_HOUR") %>
                  <%= select_tag :hour, options_for_select(hour_list, params[:hour]), {:class => "selectHour"} %>
                </div>
                <div class="col-xs-3">
                  <%= t("common.COMMON_SCHOOLYEAR") %>
                  <%= select_tag :school_year, options_for_select(school_year_list, params[:school_year]), {:class => "selectYear"} %>
                </div>
                <div class="col-xs-3">
                  <%= t("common.COMMON_SEASON") %>
                  <%= select_tag :season, options_for_select(season_list, params[:season]), {:class => "selectSeason"} %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<!-- お知らせ一覧 -->
<div class="row">
  <div class="col-xs-12">
    <% if @faq_answers.count == 0 %>
      <p><%= t("common.COMMON_NOTFOUND") %></p>
    <% else %>
      <% @faq_answers.each.with_index(1) do |faq_answer, index| %>
        <div class="panel panel-default">
          <div class="panel-body">
            <table class="table table-striped table-hover ">
              <!-- No. -->
              <tr>
                <td class="col-xs-2 td-header"><%= t("common.COMMON_NO1") %></td>
                <td class="col-xs-10"><%= index %></td>
              </tr>

              <!-- コース名 -->
              <tr>
                <td class="td-header"><%= t("common.COMMON_COURSENAME") %></td>
                <td><%= faq_answer.faq.course.course_name %></td>
              </tr>

              <!-- 質問内容 -->
              <tr>
                <td class="td-header"><%= t("faq.COMMONFAQ_QUESTION_NODATE") %></td>
                <td><%== convert_html(faq_answer.open_question) %></td>
              </tr>

              <!-- 質問日 -->
              <tr>
                <td class="td-header"><%= t("faq.COMMONFAQ_QUESTION_DATE") %></td>
                <td><%=l faq_answer.created_at, :format => :default %></td>
              </tr>

              <!-- 回答内容 -->
              <tr>
                <td class="td-header"><%= t("faq.COMMONFAQ_ANSWER_NODATE") %></td>
                <td><%== convert_html(faq_answer.open_answer) %></td>
              </tr>

              <!-- 回答日 -->
              <tr>
                <td class="td-header"><%= t("faq.COMMONFAQ_ANSWER_DATE") %></td>
                <td><%=l faq_answer.updated_at, :format => :default %></td>
              </tr>
            </table>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<!-- アンカーボタン -->
<div class="row">
  <div class="col-sm-12">
    <div class="pull-right">
      <a class="anchor" href="#anchor-top">
        <%= t("common.COMMON_TOP") %>
      </a>
    </div>
  </div>
</div>

<!-- 閉じるボタン -->
<div class="text-center">
  <div class="btn-group">
    <%= link_to t('common.COMMON_RETURN'), root_path, class: 'btn btn-default center-block' %>
  </div>
</div>
<br />
