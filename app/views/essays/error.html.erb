<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("execution.COMMONMATERIALSEXECUTION_TITLEEXECUTIONASSIGNMENTESSAY") } %>

<!-- 氏名、テスト/アンケートタイトル -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <!-- 科目名称　-->
          <tr>
            <td class="col-xs-4">
              <%= t("common.COMMON_COURSENAME") %>
            </td>
            <td class="col-xs-8">
              <%= @essay.course.course_name %>
            </td>
          </tr>

          <!-- テストタイトル　-->
          <tr>
            <td>
              <%= t("common.COMMON_SUBJECT") %>
            </td>
            <td>
              <%= @essay.generic_page_title %>
            </td>
          </tr>

          <!-- 指名　-->
          <tr>
            <td>
              <%= t("common.COMMON_TARGETNAME") %>
            </td>
            <td>
              <%= current_user.user_name %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if @essay.start_time.blank? %>
          <%= t("execution.MAT_EXE_ASS_EXECUTEASSIGNMENTESSAY_ALREADYPASSEDENDTIME_html", :param0 => l(@essay.end_time)) %>
        <% else %>
          <%= t("execution.MAT_EXE_ASS_EXECUTEASSIGNMENTESSAY_INVALIDTERM_html", :param0 => l(@essay.start_time), :param1 => l(@essay.end_time)) %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- 閉じるボタン -->
<div class="text-center">
  <div class="btn-group">
    <%= link_to t('common.COMMON_CLOSE'), 'javascript:void();', class: 'btn btn-default ceas-button-margin-5 center-block', onclick: 'closeWindow(); return false;' %>
  </div>
</div>
