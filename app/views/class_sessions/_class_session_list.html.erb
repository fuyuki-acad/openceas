<% if @course.open_course_flag == Settings.COURSE_OPENCOURSEFLG_PRIVATE %>
  <!-- お知らせ・FAQ　-->
  <div class="panel panel-default">
    <% if current_user.student? %>
      <div class="panel-heading">
        <h3 class="panel-title">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>

          <!-- 出席アイコン 関連-->
          <span class='badge badge-info'>
            <%= t("class_session_execution.CLA_CLASSSESSIONEXECUTION_ATTENDANCE_ICON", :param0 => @course.attendance_count_by_attendance(current_user), :param1 => @course.attendance_count_all(current_user)) %>
          </span>

          <span class='badge badge-info'>
            <%= t("class_session_execution.CLA_CLASSSESSIONEXECUTION_ATTENDANCE_ICON", :param0 => @course.attendance_count_by_late(current_user), :param1 => @course.attendance_count_all(current_user)) %>
          </span>

          <span class='badge badge-info'>
            <%= t("class_session_execution.CLA_CLASSSESSIONEXECUTION_ATTENDANCE_ICON", :param0 => @course.attendance_count_by_absent(current_user), :param1 => @course.attendance_count_all(current_user)) %>
          </span>
        </h3>
      </div>
    <% end %>

    <div class="panel-body">
      <div class="row">
        <!-- お知らせ -->
        <% if @course.announcement_cd == 1 %>
          <div class="col-md-6">
            <%= link_to "javascript:void();",
              {:class => "btn btn-default btn-block ceas-button-margin-5",
               :onclick => "openWindow3('" + url_for(:action => :announcement, :course_id => @course) +"', 'openFaqList', '640', '400')"} do %>
              <%= t("class_session_execution.CLA_CLASSSESSIONEXECUTION_ANNOUNCEMENT") %>
            <% end %>
          </div>
        <% end %>

        <!-- FAQ -->
        <% if @course.faq_cd == 1 %>
          <div class="col-md-6">
            <%= link_to "javascript:void();",
              {:class => "btn btn-default btn-block ceas-button-margin-5",
               :onclick => "openWindow3('" + url_for(:controller => :faqs, :action => :course, :course_id => @course) +"', 'openFaqList', '640', '400')"} do %>
              <span class="glyphicon glyphicon-comment" aria-hidden="true"></span><%= t("class_session_execution.CLA_CLASSSESSIONEXECUTION_FAQ") %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="row">
        <div class="col-md-6">
          <% if @course.group_folder_count > 0 %>
            <!-- グループフォルダ -->
            <%= link_to "javascript:void();",
              {:class => "btn btn-default btn-block ceas-button-margin-5",
               :onclick => "openWindow3('" + url_for(:controller => :group_folders, :course_id => @course) +"', 'groupFolderWindow', '600', '600')"} do %>
              <%= t("class_session_execution.CLA_CLASSSESSIONEXECUTION_GROUPFOLDER") %>
            <% end %>
          <% end %>
        </div>

        <!-- 科目別HPへ -->
        <div class="col-md-6">
          <%= link_to url_for(:action => :specific_page, :course_id => @course), {:class => "btn btn-default btn-block ceas-button-margin-5", :target => "_blank"} do %>
            <%= t("class_session_execution.CLA_CLASSSESSIONEXECUTION_TOSPECIFICPAGE") %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <% if current_user.student? && @class_session && @class_session.class_session_no > 0 %>
          <div class="col-md-6">
            <%= link_to t("class_session_execution.CLA_CLASSSESSIONEXECUTION_CONFIRMATTENDANCE"), "javascript:void();",
              {:class => "btn btn-default btn-block ceas-button-margin-5",
               :onclick => "openWindow2('" + url_for(:action => :confirm_attendance, :course_id => @course, :session_no => @class_session.class_session_no) +"', 'registerAttendanceWindow', '500', '300')"} %>
          </div>
        <% end %>

      </div>

      <div class="row">
        <!-- 担任者Top画面 -->
        <% if current_user.role_id < 3 %>
          <!-- 出席 関連1-->
          <div class="col-md-6">
            <% if @class_session && @class_session.class_session_no > 0 %>
              <%= link_to t("class_session_execution.CLA_CLASSSESSIONEXECUTION_COLLECTATTENDANCE"), "javascript:void();",
                {:class => "btn btn-default btn-block ceas-button-margin-5",
                 :onclick => "openWindow2('" + url_for(:action => :collect_attendance, :course_id => @course, :session_no => @class_session.class_session_no) +"', 'collectAttendanceWindow', '500', '480')"} %>
            <% end %>
          </div>
          <div class="col-md-6">
            <% if @class_session && @class_session.class_session_no > 0 %>
              <%= link_to t("class_session_execution.CLA_CLASSSESSIONEXECUTION_ATTENDANCETABLE"), "javascript:void();",
                {:class => "btn btn-default btn-block ceas-button-margin-5",
                 :onclick => "openWindow1('" + teacher_attendance_path(@course, :session_no => @class_session.class_session_no) +"', 'registerAttendanceWindow', '500', '300')"} %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="row">
        <!-- 担任者Top画面 -->
        <% if current_user.role_id < 3 %>
          <!-- 出席ア関連2-->
          <div class="col-md-6">
            <% if @class_session && @class_session.class_session_no > 0 %>
              <%= link_to t("class_session_execution.CLA_CLASSSESSIONEXECUTION_CONFIRMATTENDANCE"), "javascript:void();",
                {:class => "btn btn-default btn-block ceas-button-margin-5",
                 :onclick => "openWindow2('" + url_for(:action => :confirm_attendance, :course_id => @course, :session_no => @class_session.class_session_no) +"', 'registerAttendanceWindow', '500', '300')"} %>
            <% end %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
<% end %>

<!-- 0件メッセージ -->
<% if @course.class_sessions.blank? %>
  <%= t("common.COMMON_NOTFOUND") %>
<% else %>
  <!-- リスト表示 -->
  <div class="panel panel-default">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            <%= t("class_session_execution.CLA_CLASSSESSIONEXECUTION_CLASSSESSIONLIST") %>
          </h3>
        </div>
      </div>

      <div class="panel-body">
        <!-- 授業リスト -->
        <table class="table table-striped table-hover">
          <% 0.upto(@course.class_session_count) do |index| %>
            <% current_session = @course.class_session(index) %>
            <tr>
              <td class="col-xs-7 td-bold">
                <% if current_session %>
                  <!-- 割付がある時 -->
                  <% if index == 0 %>
                    <% if @class_session && index == @class_session.class_session_no %>
                      <!-- 共通ページ(選択時) -->
                      <%= t("class_session_execution.CLA_CLASSSESSIONEXECUTION_COUNT0") %>
                    <% else %>
                      <!-- 共通ページ(非選択時) -->
                      <%= link_to t("class_session_execution.CLA_CLASSSESSIONEXECUTION_COUNT0"), url_for(:action => :show, :course_id => @course.id, :session_no => index) %>
                    <% end %>
                  <% else %>
                    <% if @class_session && index == @class_session.class_session_no %>
                      <!-- 各授業ページ(選択時) -->
                      <%= current_session.class_session_day %>
                    <% else %>
                      <!-- 各授業ページ(非選択時) -->
                      <%= link_to current_session.class_session_day, url_for(:action => :show, :course_id => @course.id, :session_no => index) %>
                    <% end %>
                  <% end %>
                <% else %>
                  <!-- 割付がない時 -->
                  <% if index == 0 %>
                    <% if @class_session && index == @class_session.class_session_no %>
                      <!-- 共通ページ(選択時) -->
                      <%= t("class_session_execution.CLA_CLASSSESSIONEXECUTION_COUNT0") %>
                    <% else %>
                      <!-- 共通ページ(非選択時) -->
                      <%= link_to t("class_session_execution.CLA_CLASSSESSIONEXECUTION_COUNT0"), url_for(:action => :show, :course_id => @course.id, :session_no => index) %>
                    <% end %>
                  <% else %>
                    <% if @class_session && index == @class_session.class_session_no %>
                      <!-- 各授業ページ(選択時) -->
                      <%= t("common.COMMON_COUNTFORM", :param0 => index) %>
                    <% else %>
                      <!-- 各授業ページ(非選択時) -->
                      <%= link_to t("common.COMMON_COUNTFORM", :param0 => index), url_for(:action => :show, :course_id => @course.id, :session_no => index) %>
                    <% end %>
                  <% end %>
                <% end %>
              </td>
              <td class="col-xs-5 td-bold">
                <% if current_session %>
                  <% if current_session.assigned_materials? %>
                    <%= image_tag "siryo.gif", :alt => t("select_class_session.MAT_ALL_SELECTCLASSSESSION_MATERIALTEXT1") %>
                  <% end %>
                  <% if current_session.assigned_urls? %>
                    <%= image_tag "url.gif", :alt => t("select_class_session.MAT_ALL_SELECTCLASSSESSION_MATERIALTEXT3") %>
                  <% end %>
                  <% if current_session.assigned_componds? || current_session.assigned_multiplefibs? %>
                    <%= image_tag "test.gif", :alt => t("select_class_session.MAT_ALL_SELECTCLASSSESSION_MATERIALTEXT6") %>
                  <% end %>
                  <% if current_session.assigned_essays? %>
                    <%= image_tag "repo.gif", :alt => t("select_class_session.MAT_ALL_SELECTCLASSSESSION_MATERIALTEXT11") %>
                  <% end %>
                  <% if current_session.assigned_questionnaires? %>
                    <%= image_tag "enq.gif", :alt => t("select_class_session.MAT_ALL_SELECTCLASSSESSION_MATERIALTEXT13") %>
                  <% end %>
<!-- ********** 未対応（現行よりコピー） ここから **********-->
                  <!--@include file="../forumManagement/includes/ClassSessionExecutionIcon.jsp" -->
                  <!--@include file="../courseware/includes/ClassSessionExecutionIcon.jsp" -->
<!-- ********** 未対応（現行よりコピー） ここまで**********-->
                  <% if current_session.assigned_evaluations? %>
                    <%= image_tag "eva.gif", :alt => t("select_class_session.MAT_ALL_SELECTCLASSSESSION_MATERIALTEXT6") %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
<% end %>
