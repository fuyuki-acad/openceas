<table class="table table-striped table-hover">
  <!--タイトル-->
  <tr>
    <td class="input_left_small">
      <%= t("common.COMMON_SUBJECT") %>
      <span class='badge badge-essencial'>
        <%= t("common.COMMON_ESSENCIAL") %>
      </span>
    </td>
    <td class="input_right_small">
      <%= form.text_field :generic_page_title, {:class => 'form-control', :maxlength => 100} %>
    </td>
  </tr>

  <!--授業メモ（公開メモ）	-->
  <tr>
    <td class="input_left_small">
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_OPENCOMMENT") %>
    </td>
    <td class="input_right_small" >
      <%= form.text_area :material_memo, {:class => 'form-control', :rows => 5} %>
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_SCRIPT1") %>
    </td>
  </tr>

  <!--評点を学生に通知-->
  <tr>
    <td class="input_left_small">
      <%= t("materials_registration.MAT_REG_EVA_EVALUATIONLIST_RATE_NOTIFY") %>
    </td>
    <td class="input_right_small">
      <label><%= radio_button :generic_page, :score_open_flag, Settings.GENERICPAGE_SCOREOPENFLG_ON %> <%= t('common.COMMON_DO') %></label>
      <label><%= radio_button :generic_page, :score_open_flag, Settings.GENERICPAGE_SCOREOPENFLG_OFF %> <%= t('common.COMMON_NOTDO') %></label>
    </td>
  </tr>
</table>
