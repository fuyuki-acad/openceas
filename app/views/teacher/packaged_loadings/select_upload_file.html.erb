<% breadcrumb :select_upload_file_packaged_loadings, @course %>

<%= render 'shared/error', :record => @course %>

<!-- スマートフォンタイトル　-->
<h5 class="visible-xs visible-sm">
  <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
  <%= t("packaged_loadings.COMMONPACKAGEDLOADING_TITLEUPLOADMATERIALS") %>
</h5>

<!-- 科目名 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <h5>
          <%= @course.course_name %>
        </h5>
      </div>
    </div>
  </div>
</div>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <p class="annotation">
      <%= t("packaged_loadings.COMMONPACKAGEDLOADING_UPLOADMATERIALSEXPLANATION1") %>
    </p>
  </div>
</div>

<%= form_for :material_file, :url => {:action => :confirm_upload, :course_id => @course}, :class => "form-horizontal" do |form| %>
<%= form.hidden_field :dummy %>
<!-- 入力フォーム -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <td>
              <%= t("packaged_loadings.COMMONPACKAGEDLOADING_UPLOADFILE") %>
            </td>
            <td>
              <div class="form-file">
                <label for="material_file_file" >
                  <span class="browse_btn"><%= t('common.COMMON_SELECT_FILE') %></span><%= form.file_field :file %>
                  <%= render "shared/fileupload_help" %>
                </label>
                <span class="form-file-name"><%= t('common.COMMON_NO_FILE_SELECTED') %></span>
              </div >
            </td>
          </tr>
        </table>
      </div>
    </div>

    <!-- アップロードボタン -->
    <div class="text-center">
      <div class="btn-group">
        <%= form.submit t("common.COMMON_UPLOAD"), :name => "", :class => "btn btn-default ceas-button-margin-5 center-block" %>
      </div>
    </div>
  </div>
</div>
<% end %>
