<% breadcrumb :edit_questionnaire, @generic_page %>

<%= render 'shared/error', :record => @generic_page %>

<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONQUESTIONNAIRE") + t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONANDEDIT") } %>

<!-- 科目名 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <h5>
          <%= @generic_page.course.course_name %>
        </h5>
      </div>
    </div>
  </div>
</div>


<% if @generic_page.answer_scores.count == 0 %>
<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <p class="annotation">
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_MAKEPAGE") %>
      <%= t("materials_registration.MAT_REG_QUE_REGISTERQUESTIONNAIRE_EXPLANATION2_html") %>
    </p>
  </div>
</div>
<% end %>

<%= form_for :generic_page, :url => {:action => "update", :id => @generic_page}, :html => {:class => "form-horizontal", :method => :patch} do |form| %>
<!-- 入力フォーム -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONQUESTIONNAIRE") %>
          <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONANDEDIT") %>
        </h3>
      </div>
      <div class="panel-body">
        <% if @generic_page.answer_scores.count == 0 %>
          <%= render form %>
        <% else %>
          <%= render 'confirm', form: form %>
        <% end %>
      </div>
    </div>

    <!-- ボタン -->
    <div class="text-center">
      <div class="btn-group">
        <%= form.submit t("common.COMMON_REVISE"), class: "btn btn-primary ceas-button-margin-5" %>
        <%= link_to t("common.COMMON_RETURN"), {:action => :show, :course_id => @generic_page.course}, {:class => "btn btn-default ceas-button-margin-5"} %>
      </div>
    </div>
  </div>
</div>
<% end %>
