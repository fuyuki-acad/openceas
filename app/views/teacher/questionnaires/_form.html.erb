<table class="table table-striped table-hover">
  <!-- タイトル -->
  <tr>
    <td class="input_left">
      <%= t("common.COMMON_SUBJECT") %>
      <code>
        <%= t("common.COMMON_ESSENCIAL") %>
      </code>
    </td>
    <td class="input_right">
      <%= form.text_field :generic_page_title, {:class => 'form-control', :maxlength => 128} %>
    </td>
  </tr>

  <!-- 添付資料 -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_ATTACHMENT") %>
    </td>
    <td class="input_right">
      <label><%= radio_button :generic_page, :upload_flag, GenericPage::TYPE_NOFILEUPLOAD, :checked => true %>
        <% if @generic_page.new_record? %>
          <%= t('materials_registration.COMMONMATERIALSREGISTRATION_NOUPFILE') %>
        <% else %>
          <%= t('materials_registration.COMMONMATERIALSREGISTRATION_UPFILE_NOCHANGE') %>
        <% end %>
      </label><br/>
      <label><%= radio_button :generic_page, :upload_flag, GenericPage::TYPE_FILEUPLOAD %> <%= t('materials_registration.MAT_REG_MAT_REGISTERMULTIPLEFIB_FILEUPLOAD') %></label>
      <%= form.file_field :file, {:class => "inputForm"} %>
      <div class="strong"><%= t('materials_registration.COMMONMATERIALSREGISTRATION_ATTACHMENTEXPLANATION2') %></div>
      <div class="strong"><%= t('materials_registration.COMMONMATERIALSREGISTRATION_ATTACHMENTEXPLANATION1') %></div>
      <% unless @generic_page.link_name.blank? %>
        <%= t('materials_registration.COMMONMATERIALSREGISTRATION_ATTACHED') %>
        <%= link_to t("common.COMMON_READ"), material_path(@generic_page.id), {target: "_blank"} %>
        <%= link_to t("common.COMMON_DELETE"), {:action => :destroy_file, id: @generic_page}, :data => {:confirm => t("common.COMMON_CONFIRMDELETE")}, :class => "btn btn-danger", :method => :delete %>
      <% end %>
    </td>
  </tr>

  <!-- 開始指示パスワード -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_STARTPASSWORD") %>
    </td>
    <td class="input_right">
      <%= form.text_field :start_pass, {:class => 'form-control', :maxlength => 64} %>
    </td>
  </tr>

  <!-- 受付開始時間 -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_STARTTIME") %>
    </td>
    <td class="input_right">
      <div class="col-xs-5">
        <div class="form-group">
          <div class='input-group date datetimepicker'>
            <%= form.text_field :start_time, :data => {:date_format => 'YYYY/MM/DD HH:mm'}, :class => 'form-control', placeholder: 'YYYY/MM/DD hh:mm'  %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
      <div class="col-xs-7">
      </div>
    </td>
  </tr>

  <!-- 受付終了時間 -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_DEADLINE") %>
    </td>
    <td class="input_right">
      <div class="col-xs-5">
        <div class="form-group">
          <div class='input-group date datetimepicker'>
            <%= form.text_field :end_time, :data => {:date_format => 'YYYY/MM/DD HH:mm'}, :class => 'form-control', placeholder: 'YYYY/MM/DD hh:mm'  %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
      <div class="col-xs-7">
      </div>
    </td>
  </tr>

  <!-- 受付期間内の回答修正 -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.MAT_REG_QUE_REGISTERQUESTIONNAIRE_REVISEREPLY") %>
    </td>
    <td class="input_right">
      <label><%= radio_button :generic_page, :edit_flag, "0" %> <%= t('common.COMMON_INVALID') %></label>
      <label><%= radio_button :generic_page, :edit_flag, "1" %> <%= t('common.COMMON_VALID') %></label>
      <br/>
      <%= t("materials_registration.MAT_REG_QUE_REGISTERQUESTIONNAIRE_REVISEREPLYEXPLANATION_html") %>
    </td>
  </tr>

  <!-- 匿名アンケート -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.MAT_REG_QUE_REGISTERQUESTIONNAIRE_ANONYMOUS") %>
    </td>
    <td class="input_right">
      <label><%= radio_button :generic_page, :anonymous_flag, "0" %> <%= t('common.COMMON_INVALID') %></label>
      <label><%= radio_button :generic_page, :anonymous_flag, "1" %> <%= t('common.COMMON_VALID') %></label>
      <br/>
      <%= t("materials_registration.MAT_REG_QUE_REGISTERQUESTIONNAIRE_ANONYMOUSEXPLANATION") %>
    </td>
  </tr>

  <!-- 授業メモ -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_OPENCOMMENT") %>
    </td>
    <td class="input_right">
      <%= form.text_area :material_memo, {:class => 'form-control', :rows => '5'} %>
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_SCRIPT1") %>
    </td>
  </tr>
</table>
