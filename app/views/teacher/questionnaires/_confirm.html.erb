<table class="table table-striped table-hover">
  <!-- タイトル -->
  <tr>
    <td class="input_left">
      <%= t("common.COMMON_SUBJECT") %>
      <span class='badge badge-essencial'>
        <%= t("common.COMMON_ESSENCIAL") %>
      </span>
    </td>
    <td class="input_right">
      <%= @generic_page.generic_page_title %>
    </td>
  </tr>

  <!-- 添付資料 -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_ATTACHMENT") %>
    </td>
    <td class="input_right">
      <% unless @generic_page.link_name.blank? %>
        <%= t('materials_registration.COMMONMATERIALSREGISTRATION_ATTACHED') %>
        <%= link_to t("common.COMMON_READ"), material_path(@generic_page.id), {target: "_blank"} %>
      <% end %>
    </td>
  </tr>

  <!-- 開始指示パスワード -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_STARTPASSWORD") %>
    </td>
    <td class="input_right">
      <%= @generic_page.start_pass %>
    </td>
  </tr>

  <!-- 受付開始時間 -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_STARTTIME") %>
    </td>
    <td class="input_right">
      <div class="col-xs-12">
        <div class="form-group">
          <div class='input-group date datetimepicker form-datetime'>
            <%= form.text_field :start_time, :data => {:date_format => 'YYYY/MM/DD HH:mm'}, :class => 'form-control', placeholder: 'YYYY/MM/DD hh:mm'  %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
    </td>
  </tr>

  <!-- 受付終了時間 -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_DEADLINE") %>
    </td>
    <td class="input_right">
      <div class="col-xs-12">
        <div class="form-group">
          <div class='input-group date datetimepicker form-datetime'>
            <%= form.text_field :end_time, :data => {:date_format => 'YYYY/MM/DD HH:mm'}, :class => 'form-control', placeholder: 'YYYY/MM/DD hh:mm'  %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
    </td>
  </tr>

  <!-- 受付期間内の回答修正 -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.MAT_REG_QUE_REGISTERQUESTIONNAIRE_REVISEREPLY") %>
    </td>
    <td class="input_right">
      <label><%= radio_button :generic_page, :edit_flag, "0", disabled: true %> <%= t('common.COMMON_INVALID') %></label>
      <label><%= radio_button :generic_page, :edit_flag, "1", disabled: true %> <%= t('common.COMMON_VALID') %></label>
      <br/>
      <%= t("materials_registration.MAT_REG_QUE_REGISTERQUESTIONNAIRE_REVISEREPLYEXPLANATION_html") %>
    </td>
  </tr>

  <!-- 匿名アンケート -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.MAT_REG_QUE_REGISTERQUESTIONNAIRE_ANONYMOUS") %>
    </td>
    <td class="input_right">
      <label><%= radio_button :generic_page, :anonymous_flag, "0", disabled: true %> <%= t('common.COMMON_INVALID') %></label>
      <label><%= radio_button :generic_page, :anonymous_flag, "1", disabled: true %> <%= t('common.COMMON_VALID') %></label>
      <br/>
      <%= t("materials_registration.MAT_REG_QUE_REGISTERQUESTIONNAIRE_ANONYMOUSEXPLANATION") %>
    </td>
  </tr>

  <!-- 授業メモ -->
  <tr>
    <td class="input_left">
      <%= t("materials_registration.COMMONMATERIALSREGISTRATION_OPENCOMMENT") %>
    </td>
    <td class="input_right">
      <%== @generic_page.material_memo %>
    </td>
  </tr>
</table>
