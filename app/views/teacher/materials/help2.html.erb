<!DOCTYPE html>
<html>
<head>
  <title>OpenCeas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload', 'data-turbolinks-eval': false %>
  <%= csrf_meta_tags %>
</head>
<body>

<body>
    <!-- メニューバー -->
    <%= render 'shared/header' %>

    <div class="container-fluid">
      <!-- 説明文の表示 -->
      <div class="row">
        <div class="col-sm-12">
          <p class="annotation">
            <%= t("page_management.MAT_REG_MAT_HELP2_EXPLANATION1") %>
            <br />
            <%= t("page_management.MAT_REG_MAT_HELP2_EXPLANATION2") %>
            <br />
            <%= t("page_management.MAT_REG_MAT_HELP2_EXPLANATION3") %>
            <br />
            <%= t("page_management.MAT_REG_MAT_HELP2_EXPLANATION4") %>
            <br />
            <%= t("page_management.MAT_REG_MAT_HELP2_EXPLANATION5") %>
            <br />
            <%= t("page_management.MAT_REG_MAT_HELP2_EXPLANATION6") %>
          </p>
        </div>
      </div>

      <div class="text-center">
        <div class="btn-group">
          <%= link_to t("common.COMMON_CLOSE"), "javascript:void();", {class: "btn btn-default ceas-button-margin-5", onclick: "window.close()"} %>
        </div>
      </div>
    </div>

  <!-- フッター -->
  <%= render 'shared/footer' %>

</body>
</html>
