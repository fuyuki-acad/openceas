<% breadcrumb :edit_essay, @generic_page %>

<%= render 'shared/error', :record => @generic_page %>

<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONASSIGNMENTESSAY") + t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONANDEDIT") } %>

<!-- 科目名 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <h5>
          <%= @generic_page.course.course_name %>
        </h5>
      </div>
    </div>
  </div>
</div>

<!-- 授業割り付け画面 -->
<div class="row">
  <div class="col-xs-12">
    <div class="pull-right">
      <div class="text-center">
        <div class="btn-group">
          <%= link_to t("common.COMMON_TOALLOCATION"), {:controller => :allocations, :action => :show, :course_id => @generic_page.course}, {:class => "btn btn-theme-a ceas-button-margin-5"} %>
        </div>
      </div>
    </div>
  </div>
</div>

<br />

<% if @generic_page.answer_scores.count > 0 %>

  <!-- 確認 -->
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONASSIGNMENTESSAY") %>
            <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONANDEDIT") %>
          </h3>
        </div>
        <div class="panel-body">
          <%= render 'confirm' %>
        </div>
      </div>

      <!-- ボタン -->
      <div class="text-center">
        <div class="btn-group">
          <%= link_to t("common.COMMON_RETURN"), {:action => :show, :course_id => @generic_page.course}, {:class => "btn btn-default ceas-button-margin-5"} %>
        </div>
      </div>
    </div>
  </div>

<% else %>

  <!-- 説明文 -->
  <div class="row">
    <div class="col-sm-12">
      <p class="annotation">
        <%= t("materials_registration.COMMONMATERIALSREGISTRATION_MAKEPAGE") %>
        <%= t("materials_registration.MAT_REG_ASS_REGISTERASSIGNMENTESSAY_EXPLANATION1_html") %>
        <%= t("materials_registration.MAT_REG_ASS_REGISTERASSIGNMENTESSAY_EXPLANATION13_html") %>
        <%= t("materials_registration.MAT_REG_ASS_REGISTERASSIGNMENTESSAY_EXPLANATION12_html") %>
      </p>
    </div>
  </div>

  <%= form_for :generic_page, :url => {:action => "update", :id => @generic_page}, :html => {:class => "form-horizontal", :method => :patch} do |form| %>
  <!-- 入力フォーム -->
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONASSIGNMENTESSAY") %>
            <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONANDEDIT") %>
          </h3>
        </div>
        <div class="panel-body">
          <%= render form %>
        </div>
      </div>

      <!-- ボタン -->
      <div class="text-center">
        <div class="btn-group">
          <%= form.submit t("common.COMMON_REVISE"), class: "btn btn-primary ceas-button-margin-5" %>
          <%= link_to t("common.COMMON_RETURN"), {:action => :show, :course_id => @generic_page.course}, {:class => "btn btn-default ceas-button-margin-5"} %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

<% end %>
