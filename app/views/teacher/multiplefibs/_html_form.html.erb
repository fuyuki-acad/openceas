<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-striped table-hover">
      <!-- 担当科目名称 -->
      <tr>
        <td class="col-xs-3">
           <%= t("common.COMMON_TARGETCOURSE") %>
        </td>
        <td class="col-xs-9">
          <%= h(@course.course_name) %>
        </td>
      </tr>

      <!-- タイトル -->
      <tr>
        <td class="col-xs-3">
          <%= t("common.COMMON_SUBJECT") %>
        </td>
        <td class="col-xs-9">
          <%== @generic_page.generic_page_title %>
          <%= form.hidden_field :generic_page_title %>
        </td>
      </tr>

      <!-- 受験回数 -->
      <tr>
        <td>
          <%= t("materials_registration.COMMONMATERIALSREGISTRATION_EXAMINATIONCOUNT") %>
        </td>
        <td>
          <%= @generic_page.max_count %>
          <%= form.hidden_field :max_count %>
        </td>
      </tr>

      <!-- 合格ライン -->
      <tr>
        <td>
          <%= t("materials_registration.COMMONMATERIALSREGISTRATION_PASSINGMARK") %>
        </td>
        <td>
          <%= @generic_page.pass_grade %>
          <%= form.hidden_field :pass_grade %>
        </td>
      </tr>

      <!-- 開始指示パスワード	 -->
      <tr>
        <td>
          <%= t("materials_registration.COMMONMATERIALSREGISTRATION_STARTPASSWORD") %>
        </td>
        <td>
          <% if @generic_page.start_pass.blank? %>
            <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TABLE16") %>
          <% else %>
            <%= @generic_page.start_pass %>
          <% end %>
          <%= form.hidden_field :start_pass %>
        </td>
      </tr>

      <!-- 受付終了時間 -->
      <tr>
        <td>
          <%= t("materials_registration.COMMONMATERIALSREGISTRATION_DEADLINE") %>
        </td>
        <td>
          <% if @generic_page.end_time.blank? %>
            <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TABLE16") %>
          <% else %>
            <%= @generic_page.end_time.strftime("%Y/%m/%d %H:%M") %>
          <% end %>
          <%= form.hidden_field :end_time %>
        </td>
      </tr>

      <!-- 問題用紙 -->
      <tr>
        <td class="col-xs-3">
          <%= t("materials_registration.MAT_REG_MAT_REGISTERMULTIPLEFIB_CREATEHTMLPAGE") %>
        </td>
        <td class="col-xs-9">
          <%= form.cktext_area :html_text, {:class => 'form-control', :rows => 50}%>
        </td>
      </tr>
    </table>
    <%= form.hidden_field :material_memo %>
  </div>
</div>
