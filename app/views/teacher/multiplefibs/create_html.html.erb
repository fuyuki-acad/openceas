<% breadcrumb :new_multiplefib, @course %>

<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("page_management.MAT_REG_MAT_PAGEMANAGEMENT_NAVI") } %>

<%= form_for :generic_page, :url => {:action => "create_html"}, :html => {:class => "form-horizontal"} do |form| %>
<%= form.hidden_field :course_id %>
<%= form.hidden_field :type_cd %>
<%= form.hidden_field :upload_flag %>

<!-- 入力フォーム -->
<div class="row">
  <div class="col-xs-12">

    <%= render 'html_form', :form => form %>

    <div class="text-center">
      <div class="btn-group">
        <%= form.submit t("common.COMMON_REGISTER"), class: "btn btn-primary ceas-button-margin-5" %>
      </div>
    </div>
  </div>
</div>
<% end %>
