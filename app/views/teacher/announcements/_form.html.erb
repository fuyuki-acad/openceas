<table class="table table-striped table-hover">
  <tr>
    <td class="col-xs-3">
      <%= t("common.COMMON_SUBJECT") %>
      <span class='badge badge-essencial'>
        <%= t("common.COMMON_ESSENCIAL") %>
      </span>
    </td>
    <td class="col-xs-9">
      <%= form.text_field :subject, {:class => 'form-control', :maxlength => 128} %>
    </td>
  </tr>
  <tr>
    <td>
      <%= t("common.COMMON_CONTENT") %>
      <span class='badge badge-essencial'>
        <%= t("common.COMMON_ESSENCIAL") %>
      </span>
    </td>
    <td>
      <%= form.text_area :content, {:class => 'form-control', :rows => 10} %>
    </td>
  </tr>

  <tr>
    <% if @announcement.new_record? %>
    <td>
      <%= t("announcement.ANN_REGISTERANNOUNCEMENT_SENDCHECK") %>
    </td>
    <td>
      <label><%= radio_button :announcement, :announcement_state, "0" %> <%= t('common.COMMON_DO') %></label>
      <label><%= radio_button :announcement, :announcement_state, "1" %> <%= t('common.COMMON_NOTDO') %></label>
      <label><%= radio_button :announcement, :announcement_state, "2" %> <%= t('announcement.ANN_REGISTERANNOUNCEMENT_MAILONLY') %></label>
    </td>
    <% else %>
    <td>
      <%= t("announcement.COMMONANNOUNCEMENT_STATE") %>
    </td>
    <td>
      <%= convert_mail_flag(@announcement.mail_flag, @announcement.announcement_cd) %>
    </td>
    <% end %>
  </tr>
</table>
