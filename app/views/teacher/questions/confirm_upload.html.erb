<% if @generic_page.type_cd == Settings.GENERICPAGE_TYPECD_COMPOUNDCODE %>
  <% breadcrumb :confirm_upload_question, @generic_page %>
<% else %>
  <% breadcrumb :confirm_upload_questionnaire_question, @generic_page %>
<% end %>

<!-- スマートフォンタイトル　-->
<h5 class="visible-xs visible-sm">
  <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
  <% if @generic_page.type_cd == Settings.GENERICPAGE_TYPECD_COMPOUNDCODE %>
    <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONCOMPOUND") %>
  <% else %>
    <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONQUESTIONNAIRE") %>
  <% end %>
</h5>

<!-- 担当科目名称　-->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <td>
              <%= t("common.COMMON_COURSENAME") %>
            </td>
            <td>
              <%= @generic_page.course.course_name %>
            </td>
          </tr>
          <tr>
            <td>
              <% if @generic_page.type_cd == Settings.GENERICPAGE_TYPECD_COMPOUNDCODE %>
                <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TABLE1") %>
              <% else %>
                <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TABLE15") %>
              <% end %>
            </td>
            <td>
              <%= @generic_page.generic_page_title %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= t("materials_registration.MAT_REG_REGISTERUPLOADQUESTION_EXPLANATION1_html") %>
      </div>
    </div>
  </div>
</div>

<!-- 登録する問題情報 -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t("materials_registration.COMMONMATERIALSREGISTRATION_CONFIRM_REGISTER_QUESTION") %>
        </h3>
      </div>

      <div class="panel-body">
        <% @questions.each.with_index(1) do |parent, i| %>
          <!-- 大問 -->
          <div class='row'>
            <div class='col-xs-12'>
              <div class='panel panel-default'>
                <div class='panel-heading'>
                  <h3 class='panel-title'>
                    <%= t("execution.COMMONMATERIALSEXECUTION_PARENTQUESTION") + i.to_s %>
                    <%== parent['content'] %>
                  </h3>
                </div>
                <div class='panel-body'>
                  <div class='row'>
                    <div class='col-xs-12'>
                      <div class='panel panel-default'>
                        <div class='panel-body'>
                          <%== parent['content'] %>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- 設問 -->
                  <% parent['questions'].each.with_index(1) do |question, j| %>
                  <div class='row'>
                    <div class='col-xs-12'>
                      <div class='panel panel-info'>
                        <div class='panel-heading'>
                          <%= t("materials_registration.COMMONMATERIALSREGISTRATION_QUESTION") + j.to_s %>
                          <span class="pull-right"><%= t("execution.MAT_EXE_COM_GRADEEXECUTECOMPOUND_SCOREFORMAT", :param0 => question['score']) %></span>
                        </div>
                        <div class='panel-body'>
                          <div class='row'>
                            <div class='col-xs-12'>
                              <%== question['content'] %>
                              <div class='panel panel-default'>
                                <div class='panel-body'>

                                  <!-- ラジオボタンの時 -->
                                  <% if question['pattern_cd'] == Settings.QUESTION_PATTERNCD_RADIO %>
                                    <% question['sels'].each do |quiz| %>
                                      <%= radio_button_tag "select_answer_id[]", "", question_file_checked(quiz) %> <label><%= quiz['content'] %></label><br/>
                                    <% end %>

                                  <!-- リストボックスの時 -->
                                  <% elsif question['pattern_cd'] == Settings.QUESTION_PATTERNCD_ONELIST %>
                                    <%= select_tag "select_answer_id[]", question_file_options_for_select(question) %>

                                  <!-- チェックボックスの時 -->
                                  <% elsif question['pattern_cd'] == Settings.QUESTION_PATTERNCD_CHECK %>
                                    <% question['sels'].each do |quiz| %>
                                      <%= check_box_tag "select_answer_id[]", "", question_file_checked(quiz) %> <label><%= quiz['content'] %></label><br/>
                                    <% end %>

                                  <!-- 記述の時 -->
                                  <% elsif question['pattern_cd'] == Settings.QUESTION_PATTERNCD_ESSAY %>
                                    <%= text_area_tag "text_answer[]", "", {:class => "form-control", :rows => question['text_row']} %>

                                  <% end %>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= form_tag url_for(:action => :upload, :generic_page_id => @generic_page), :class => "form-horizontal", :method => :patch do %>
<div class="text-center">
  <div class="btn-group">
    <%= submit_tag t("materials_registration.COMMONMATERIALSREGISTRATION_STARTREGISTRATION"), :name => "", :class => "btn btn-default ceas-button-margin-5 center-block" %>
    <%= link_to t("common.COMMON_RETURN"), {:action => :select_upload, :generic_page_id => @generic_page}, {:class => "btn btn-default ceas-button-margin-5 center-block"} %>
  </div>
</div>
<% end %>
