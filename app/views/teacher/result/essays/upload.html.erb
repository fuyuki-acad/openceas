<% breadcrumb :result_result_essay_upload, @essay %>

<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("materials_administration.COMMONMATERIALSADMINISTRATION_ASSIGNMENTESSAYADMINISTRATION") } %>

<!-- 担当科目名称　-->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <td>
              <%= t("common.COMMON_COURSENAME") %>
            </td>
            <td>
              <%= @essay.course.course_name %>
            </td>
          </tr>
          <tr>
            <td>
              <%= t("materials_administration.COMMONMATERIALSADMINISTRATION_ASSIGNMENTESSAYTITLE") %>
            </td>
            <td>
              <%= @essay.generic_page_title %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <p class="annotation">
      <%= t("materials_administration.MAT_ADM_ASS_ASSIGNMENTESSAYTOTALRESULT_UPLOAD_EXPLANATION") %>
    </p>
  </div>
</div>

<!-- 入力フォーム -->
<%= form_for :upload, :url => {:action => :upload_confirm} do |form| %>
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <tr>
              <td>
                <%= t("materials_administration.MAT_ADM_ASS_ASSIGNMENTESSAYTOTALRESULT_UPLOAD_EXPLANATION1") %>
              </td>
              <td>
                <div class="form-file">
                  <label for="upload_file" >
                    <span class="browse_btn"><%= t('common.COMMON_SELECT_FILE') %></span><%= form.file_field :file %>
                    <%= render "shared/fileupload_help" %>
                  </label>
                  <span class="form-file-name"><%= t('common.COMMON_NO_FILE_SELECTED') %></span>
                </div >
              </td>
            </tr>
          </table>
        </div>
      </div>

      <!-- ボタン -->
      <div class="text-center">
        <div class="btn-group">
          <%= form.submit t('materials_administration.MAT_ADM_ASS_ASSIGNMENTESSAYTOTALRESULT_UPLOAD_EXPLANATION2'), class: 'btn btn-default ceas-button-margin-5 center-block' %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
