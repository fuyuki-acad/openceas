<% breadcrumb :result_result_report_import, @essay %>

<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("materials_administration.COMMONMATERIALSADMINISTRATION_ASSIGNMENTESSAYADMINISTRATION") } %>

<!-- 担当科目名称欄 -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= @essay.course.course_name %>
        </h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <td>
              <%= t("materials_administration.COMMONMATERIALSADMINISTRATION_ASSIGNMENTESSAYTITLE") %>
            </td>
            <td>
              <%= @essay.generic_page_title %>
            </td>
          </tr>
          <tr>
            <td>
              <%= t("materials_registration.MAT_REG_ASS_REGISTERASSIGNMENTESSAY_EXPLANATION3") %>
            </td>
            <td>
              <% if @essay.assignment_essay_return_method_cd == 0 %>
                <%= t("materials_registration.MAT_REG_ASS_REGISTERASSIGNMENTESSAY_EXPLANATION5") %>
              <% else %>
                <%= t("materials_registration.MAT_REG_ASS_REGISTERASSIGNMENTESSAY_EXPLANATION4") %>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= t("materials_administration.MAT_ADM_ASS_ASSIGNMENTESSAYUPLOAD_RESULT_SUCCESS") %>
      </div>
    </div>
  </div>
</div>

<!-- アップロードファイル情報 -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <td>
              <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TABLE21") %>
            </td>
            <td>
              <%= @file[:upload_file].original_filename %>
            </td>
          </tr>
          <tr>
            <td>
              <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TABLE22") %>
            </td>
            <td>
              <%= @file[:upload_file].size %>
            </td>
          </tr>
        </table>
      </div>
    </div>

    <div class="text-center">
      <div class="btn-group">
        <%= link_to t("common.COMMON_RETURN"), {:action => :report_upload}, {:class => "btn btn-primary ceas-button-margin-5"} %>
      </div>
    </div>
  </div>
</div>
