<% breadcrumb :result_result_essay_upload_confirm, @essay %>

<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("materials_administration.COMMONMATERIALSADMINISTRATION_ASSIGNMENTESSAYADMINISTRATION") } %>

<!-- 説明文 -->
<% if @messages %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= @messages %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <!-- 担当科目名称　-->
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <tr>
              <td>
                <%= t("common.COMMON_TARGETCOURSE") %>
              </td>
              <td>
                <%= @essay.course.course_name %>
              </td>
            </tr>
            <tr>
              <td>
                <%= t("materials_administration.COMMONMATERIALSADMINISTRATION_EVALUATIONLISTTITLE") %>
              </td>
              <td>
                <%= @essay.generic_page_title %>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- 説明文 -->
  <div class="row">
    <div class="col-sm-12">
      <p class="annotation">
        <%= t("materials_administration.MAT_ADM_ASS_PASTASSIGNMENTESSAY_IMPORT_EXPLANATION1") %>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <!-- ファイル名 -->
            <tr>
              <td>
                <%= t("materials_administration.MAT_ADM_ASS_PASTASSIGNMENTESSAY_IMPORT_EXPLANATION2") %>
              </td>
              <td>
                <%= @csv.file.original_filename %>
              </td>
            </tr>

            <!-- ファイルサイズ -->
            <tr>
              <td>
                <%= t("materials_administration.MAT_ADM_ASS_PASTASSIGNMENTESSAY_IMPORT_EXPLANATION3") %>
              </td>
              <td>
                <%= @csv.file.size %>
              </td>
            </tr>
          </table>
        </div>
      </div>

      <!-- ボタン -->
      <div class="text-center">
        <div class="btn-group">
          <%= link_to t("common.COMMON_REGISTER"), {:action => :upload_register}, {:class => "btn btn-primary ceas-button-margin-5 center-block"} %>
          <%= link_to t("common.COMMON_RETURN"), :back, {:class => "btn btn-default ceas-button-margin-5 center-block"} %>
        </div>
      </div>
    </div>
  </div>
<% end %>
