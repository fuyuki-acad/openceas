<% breadcrumb :result_result_report_upload_confirm, @essay %>

<!-- alertメッセージ -->
<% if @messages %>
<div class="row">
  <div class="col-xs-12">
    <div class='alert alert-warning alert-dismissible' role='alert'>
      <button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>
      <%= @messages %>
    </div>
  </div>
</div>
<% end %>

<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("materials_administration.COMMONMATERIALSADMINISTRATION_ASSIGNMENTESSAYADMINISTRATION") } %>

<!-- 担当科目名称欄 -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= @essay.course.course_name %>
        </h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <td>
              <%= t("materials_administration.COMMONMATERIALSADMINISTRATION_ASSIGNMENTESSAYTITLE") %>
            </td>
            <td>
              <%= @essay.generic_page_title %>
            </td>
          </tr>
          <tr>
            <td>
              <%= t("materials_registration.MAT_REG_ASS_REGISTERASSIGNMENTESSAY_EXPLANATION3") %>
            </td>
            <td>
              <% if @essay.assignment_essay_return_method_cd == 0 %>
                <%= t("materials_registration.MAT_REG_ASS_REGISTERASSIGNMENTESSAY_EXPLANATION5") %>
              <% else %>
                <%= t("materials_registration.MAT_REG_ASS_REGISTERASSIGNMENTESSAY_EXPLANATION4") %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>
              <%= t("materials_administration.MAT_ADM_ASS_ASSIGNMENTESSAYTOTALRESULT_REPORTDOWNLOADCARD1") %>
            </td>
            <td>
              <%= @user.user_name %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <p class="annotation">
      <%= t("materials_administration.MAT_ADM_ASS_ASSIGNMENTESSAYUPLOAD_EXPLANATION3_html") %>
      <%= t("common.COMMON_BR_html") %>
      <%= t("materials_administration.MAT_ADM_ASS_ASSIGNMENTESSAYUPLOAD_EXPLANATION4_html") %>
    </p>
  </div>
</div>

<!-- 検索条件 -->
<%= form_for :upload, :url => {:action => :import_report}, :html => {method: :post} do |form| %>
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= t("materials_administration.MAT_ADM_ASS_ASSIGNMENTESSAYUPLOAD_TITLE_UPLOADFILE") %>
          </h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12 col-sm-6">
              <div class="form-file">
                <label for="upload_upload_file" >
                  <span class="browse_btn"><%= t('common.COMMON_SELECT_FILE') %></span><%= form.file_field :upload_file %>
                </label>
                <span class="form-file-name"><%= t('common.COMMON_NO_FILE_SELECTED') %></span>
              </div >
            </div>
            <div class="col-xs-12 col-sm-6">
              <div class="btn-group">
                <%= form.submit t('materials_administration.MAT_ADM_ASS_ASSIGNMENTESSAYTOTALRESULT_UPLOAD_EXPLANATION2'), class: 'btn btn-default ceas-button-margin-5 center-block', data:{confirm: t('materials_administration.MAT_ADM_ASS_ASSIGNMENTESSAYUPLOAD_OVERWRITE_CONFIRM')} %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
