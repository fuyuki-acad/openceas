<%= javascript_include_tag 'admin/attendanceAdministration' %>

<% breadcrumb :combined_records %>

<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("attendanceAdministration.COMMONATTENDANCEADMINISTRATION_ADMIN") } %>

<!-- 担当科目名称　-->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <td>
              <%= t("common.COMMON_TARGETCOURSE") %>
            </td>
            <td>
              <%= @course.course_name %>
            </td>
          </tr>
          <tr>
            <td>
              <%= t("attendanceAdministration.COMMONATTENDANCEADMINISTRATION_COLUMNCLASSSESSIONNO") %>
            </td>
            <td>
              <%= class_session_name(@class_session_count) %>
            </td>
          </tr>
          <tr>
            <td>
              <%= t("attendanceAdministration.COMMONATTENDANCEADMINISTRATION_COLUMNATTENDANCECOUNTNO") %>
            </td>
            <td>
              <%= @attendance_count %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <p class="annotation">
      <%= t("attendanceAdministration.ATT_ADM_CLASSSESSIONATTENDANCE_CSV_UPLOAD_EXPLANATION1") %><br/>
      <%= t("attendanceAdministration.ATT_ADM_CLASSSESSIONATTENDANCE_CSV_UPLOAD_EXPLANATION2") %><br/>
      <%= t("attendanceAdministration.ATT_ADM_CLASSSESSIONATTENDANCE_CSV_UPLOAD_EXPLANATION3") %><br/>
      &nbsp&nbsp<%= t("attendanceAdministration.ATT_ADM_CLASSSESSIONATTENDANCE_CSV_UPLOAD_EXPLANATION4") %><br/>
      &nbsp&nbsp<%= t("attendanceAdministration.ATT_ADM_CLASSSESSIONATTENDANCE_CSV_REGIST_EXPLANATION14") %><br/>
      <%= t("attendanceAdministration.ATT_ADM_CLASSSESSIONATTENDANCE_CSV_UPLOAD_EXPLANATION5") %><br/>
      <%= t("attendanceAdministration.ATT_ADM_CLASSSESSIONATTENDANCE_CSV_UPLOAD_EXPLANATION6") %><br/><br/>
      <%= t("attendanceAdministration.ATT_ADM_CLASSSESSIONATTENDANCE_CSV_UPLOAD_EXPLANATION7") %><br/>
    <p/>
  </div>
</div>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <p class="annotation">
      <%= t("attendanceAdministration.ATT_ADM_CLASSSESSIONATTENDANCE_CSV_UPLOAD_EXPLANATION8") %>
    </p>
  </div>
</div>

<!-- 入力フォーム -->
<%= form_for :upload, :url => {:action => :upload_confirm, :course_id => @course.id, :class_session_count => @class_session_count, :attendance_count => @attendance_count} do |form| %>
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <tr>
              <td>
                <%= t("attendanceAdministration.ATT_ADM_CLASSSESSIONATTENDANCE_CSV_UPLOAD_EXPLANATION9") %>
              </td>
              <td>
                <%= form.file_field :file %>
              </td>
            </tr>
          </table>
        </div>
      </div>

      <!-- アップロードボタン -->
      <div class="text-center">
        <div class="btn-group">
          <%= form.submit t('common.COMMON_UPLOAD'), class: 'btn btn-default ceas-button-margin-5 center-block' %>
          <%= link_to t("common.COMMON_RETURN"), {:action => :edit, :course_id => @course.id, :class_session_count => @class_session_count, :attendance_count => @attendance_count}, {:class => "btn btn-default ceas-button-margin-5 center-block"} %>
        </div>
      </div>
    </div>
  </div>
<% end %>
