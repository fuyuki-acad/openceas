<div class="container-fluid">
  <!-- スマートフォンタイトル　-->
  <h5 class="visible-xs visible-sm">
    <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
    <%= t("materials_registration.MAT_REG_ASS_REGISTERASSIGNMENT_EXPLANATION2") %>
  </h5>

  <!-- レポート名 -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <h5>
            <%= @generic_page.generic_page_title %>
          </h5>
        </div>
      </div>
    </div>
  </div>

  <!--添付資料閲覧-->
  <% unless @generic_page.link_name.blank? %>
    <div class="main">
      <div class=shift_right>
        <%= link_to t("common.COMMON_READ"), material_path(@generic_page.id), {target: "_blank"} %>
        <%= t("materials_registration.COMMONMATERIALSREGISTRATION_ATTACHMENTARROW") %>
      </div>
    </div>
  <% end %>

  <!-- 科目表示テーブル -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <% if @generic_page.questions.count == 0 %>
            <p>
              <%= t("common.COMMON_NOTFOUND") %>
            </p>
          <% else %>
            <table class="table table-striped table-hover">
              <% @generic_page.questions.each.with_index(1) do |question, index| %>
                <tr><td>
                  <table border="0" class="assignment_panelgrid_frame">
                    <tr>
                      <th class="assignment_header" scope="colgroup" colspan="1">
                        <span class="large parentQuestion_header"><%= t("materials_registration.MAT_REG_ASS_REGISTERASSIGNMENT_ASSIGNMENT") + index.to_s %></span>
                      </th>
                    </tr>
                    <tr>
                      <td class="question_right_upper">
                        <span><%== question.content %></span>
                      </td>
                    </tr>
                  </table>
                </td></tr>
              <% end %>
            </table>
          <% end %>
        </div>
      </div>

      <!-- ボタン -->
      <div class="text-center">
        <div class="btn-group">
          <input type="button" value="<%= t("common.COMMON_CLOSE") %>" class="btn btn-default ceas-button-margin-5 center-block" onClick="closeWindow()">
        </div>
      </div>
    </div>
  </div>
</div>
