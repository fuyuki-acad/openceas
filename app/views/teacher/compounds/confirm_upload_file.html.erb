<% breadcrumb :confirm_upload_file_compound, @course %>

<!-- スマートフォンタイトル　-->
<h5 class="visible-xs visible-sm">
  <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
  <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TITLEREGISTRATIONCOMPOUND") %>
</h5>

<!-- 科目名 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <h5>
          <%= @course.course_name %>
        </h5>
      </div>
    </div>
  </div>
</div>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= t("materials_registration.COMMONMATERIALSREGISTRATION_UPLOADMATERIALSEXPLANATION2") %>
      </div>
    </div>
  </div>
</div>

<%= form_tag url_for(:action => :upload_file, :course_id => @course), :class => "form-horizontal", :method => :patch do %>
<!-- アップロードファイル確認 -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <!-- ファイル名 -->
          <tr>
            <td>
              <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TABLE21") %>
            </td>
            <td>
              <%= @material.file_name %>
            </td>
          </tr>

          <!-- ファイルサイズ -->
          <tr>
            <td>
              <%= t("materials_registration.COMMONMATERIALSREGISTRATION_TABLE22") %>
            </td>
            <td>
              <%= @material.file_size %>
            </td>
          </tr>
        </table>
      </div>
    </div>

    <div class="text-center">
      <div class="btn-group">
        <%= submit_tag t("materials_registration.COMMONMATERIALSREGISTRATION_STARTREGISTRATION"), :name => "", :class => "btn btn-default ceas-button-margin-5 center-block" %>
        <%= link_to t("common.COMMON_RETURN"), {:action => :select_upload_file, :course_id => @course}, {:class => "btn btn-default ceas-button-margin-5 center-block"} %>
      </div>
    </div>
  </div>
</div>
<% end %>
