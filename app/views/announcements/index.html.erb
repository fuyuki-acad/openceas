<% breadcrumb :announcements %>

<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("common.COMMON_ANNOUNCEMENT") } %>

<!-- アンカー -->
<a id="anchor-top" />

<% if current_user.admin? %>
<!-- 科目検索 -->
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= t("common.COMMON_SEARCHCOURSE") %>
          </h3>
        </div>
        <div class="panel-body">
          <div class="col-xs-12 col-sm-6">
            <%= form_tag url_for({:action => :index}), :method => :get do %>
              <div class="input-group">
                <%= text_field_tag "keyword", params[:keyword], class: "string required form-control" %>
                <span class="input-group-btn">
                  <%= submit_tag t("common.COMMON_SEARCH"), :name => "", :class => "btn btn-default" %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render 'shared/announcements/list' %>

<!-- アンカーボタン -->
<div class="row">
  <div class="col-sm-12">
    <div class="pull-right">
      <a class="anchor" href="#anchor-top">
        <%= t("common.COMMON_TOP") %>
      </a>
    </div>
  </div>
</div>

<% if @announcements.count > 0 %>
  <!-- 改ページボタン -->
  <div class="pull-right">
    <%= paginate(@announcements) %>
  </div>
<% end %>

<!-- 閉じるボタン -->
<div class="text-center">
  <div class="btn-group">
    <%= link_to t('common.COMMON_RETURN'), root_path, class: 'btn btn-default ceas-button-margin-5' %>
  </div>
</div>
