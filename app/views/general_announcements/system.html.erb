<% breadcrumb :sustem_info %>

<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("common.COMMON_ANNOUNCEMENT") } %>

<!-- 説明文 -->
<div class="row">
  <div class="col-sm-12">
    <p class="annotation">
      <%= t("general_announcement.GEN_SYSTEMINFO_EXPLANATION1_html") %>
    </p>
  </div>
</div>

<!-- システム情報一覧 -->
<% if @general_announcements.count == 0 %>
  <p>
    <%= t("common.COMMON_NOTFOUND") %>
  </p>
<% else %>
<div class="row">
  <div class="col-xs-12">
    <% @general_announcements.each_with_index do |general_announcement, index| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <!-- No. -->
            <tr>
              <td class="col-xs-2 td-header"><%= t("common.COMMON_NO1") %></td>
              <td class="col-xs-10"><%= index + 1 %></td>
            </tr>

            <!-- 更新日 -->
            <tr>
              <td class="td-header"><%= t("common.COMMON_DATE") %></td>
              <td><%=l general_announcement.created_at, :format => :default %></td>
            </tr>

            <!-- subject -->
            <tr>
              <td class="td-header"><%= t("common.COMMON_SUBJECT") %></td>
              <td><%= general_announcement.title %></td>
            </tr>

            <!-- content -->
            <tr>
              <td class="td-header"><%= t("general_announcement.COMMONGENERALINFO_INFOMATION") %></td>
              <td><%= convert_html(general_announcement.content) %></td>
            </tr>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>
