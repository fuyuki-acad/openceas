<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("general_announcement.GEN_GENERALINFOLIST_INFOMATIONLIST") } %>

<!-- リスト表示 -->
<div class="row" id="general_announcement_list">
  <div class="col-xs-12">
    <% @general_announcements.each_with_index do |general_announcement, index| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <!-- No. -->
            <tr>
              <td class="col-xs-2 td-header"><%= t("common.COMMON_NO1") %></td>
              <td class="col-xs-10"><%= index + 1 %></td>
            </tr>

            <!-- 更新日 -->
            <tr>
              <td class="td-header"><%= t("common.COMMON_DATE") %></td>
              <td><%=l general_announcement.created_at, :format => :default %></td>
            </tr>

            <!-- subject -->
            <tr>
              <td class="td-header"><%= t("common.COMMON_SUBJECT") %></td>
              <td><%= general_announcement.title %></td>
            </tr>

            <!-- content -->
            <tr>
              <td class="td-header"><%= t("general_announcement.COMMONGENERALINFO_INFOMATION") %></td>
              <td><%= general_announcement.content %></td>
            </tr>
          </table>
        </div>
      </div>
    <% end %>

    <!-- 改ページ -->
    <div class="pull-right">
      <%= paginate(@general_announcements) %>
    </div>
  </div>

  <!-- アンカーボタン -->
  <div class="col-sm-12">
    <div class="pull-right">
      <a class="anchor" href="#general_announcement_list">
        <%= t("common.COMMON_TOP") %>
      </a>
    </div>
  </div>

  <!-- 閉じるボタン -->
  <div class="text-center">
    <div class="btn-group">
      <%= link_to t('common.COMMON_CLOSE'), 'javascript:void();', class: 'btn btn-default ceas-button-margin-5 center-block', onclick: 'closeWindow(); return false;' %>
    </div>
  </div>
</div>
