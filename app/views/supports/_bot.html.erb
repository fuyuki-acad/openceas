<div class="left_balloon_area">
  <div class="left_icon">
    <%= image_tag 'bot.jpg' %>
  </div>
  <div class="left_balloon">
    <% if message.kind_of?(Array) %>
      <ul>
      <% message.each.with_index do |value, index| %>
        <% if index < 3 %>
          <li><%= value.answer.html_safe %></li>
        <% end %>
      <% end %>
      </ul>
    <% else %>
      <%= message %>
    <% end %>
  </div>
</div>
