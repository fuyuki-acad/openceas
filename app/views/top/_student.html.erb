            <% end %>
          </div>
        <% end %>

        <!-- 公開FAQ一覧ボタン -->
        <div class="pull-right">
          <%= link_to faqs_path, class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-list"></span><%= t("faq.TOP_TOP_OPENFAQLIST") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 授業画面の表示 -->
<div class="col-xs-12" id="course_list">
  <div class="panel panel-default">
    <div class="panel-heading">
      <!-- タイトル -->
      <h3 class="panel-title">
        <span class="glyphicon glyphicon-blackboard" aria-hidden="true"></span>
        <%= t("top.COMMONTOP_COURSELISTSTUDENT") %>
        <span class="badge pull-right"><%= t("common.COMMON_HITCOURSE", :param0 => @courses.count) %></span>
      </h3>
    </div>

    <div class="panel-body">
      <!-- 0件メッセージ -->
      <% if @courses.count == 0 %>
        <p><%= t("common.COMMON_NOTFOUND") %></p>
      <% else %>
      <table class="table table-hover">
        <thead>
          <tr class="hidden-xs even">
            <th class="hidden-xs"><%= t("common.COMMON_NO1") %></th>
            <th class="hidden-xs"><%= t("common.COMMON_DAY") %></th>
            <th class="hidden-xs"><%= t("common.COMMON_HOUR") %></th>
            <th class="hidden-xs"><%= t("common.COMMON_SCHOOLYEAR") %></th>
            <th class="hidden-xs"><%= t("common.COMMON_SEASON") %></th>
            <th class="hidden-xs"><%= t("common.COMMON_COURSENAME") %></th>
            <th class="hidden-xs"><%= t("common.COMMON_INSTRUCTOR") %></th>
            <th class="hidden-xs"><%= t("common.COMMON_MAJOR") %></th>
            <th class="hidden-xs"></th>
            <th class="hidden-xs"></th>
          </tr>
        </thead>
          <% @courses.each.with_index(1) do |course, index| %>
            <tr class="<%= (index % 2) == 0 ? 'even' : 'odd' %>">
              <!-- No. -->
              <td class="td-bold hidden-xs"><%= index %></td>
              <td class="td-bold visible-xs v-middle" rowspan="3"><%= index %></td>

              <!-- 曜日 -->
              <td class="td-bold td-nowrap"><%= convert_day_cd(course.day_cd) %></td>

              <!-- 時限 -->
              <td class="td-bold td-nowrap"><%= convert_hour_cd(course.hour_cd) %></td>

              <!-- 年度 -->
              <td class="td-bold td-nowrap"><%= course.school_year %></td>

              <!-- 学期 -->
              <td class="td-bold td-nowrap"><%= convert_season_cd(course.season_cd) %></td>

              <!-- 科目名称 -->
              <td class="td-bold hidden-xs"><%= course.course_name %></td>

              <!-- 担任者 -->
              <td class="td-bold td-nowrap hidden-xs"><%= course.instructor_name %></td>

              <!-- 系・学科・コース -->
              <td class="td-bold td-nowrap hidden-xs"><%= course.major %></td>

              <!-- 授業実施画面 -->
              <td class="td-bold hidden-xs"><%= link_to t("top.COMMONTOP_CLASSSESSIONEXECUTION"), {:controller => "class_sessions", :course_id => course.id}, class: "btn btn-primary" %></td>

              <!-- テスト結果 -->
              <td class="td-bold hidden-xs"><%= link_to t("top.STUDENTTOP_RESULT"), {:controller => "results", :course_id => course.id}, class: "btn btn-primary" %></td>

              <!-- 授業実施画面 -->
              <!-- テスト結果 -->
              <td class="td-bold visible-xs v-middle" rowspan="3">
                <%= link_to t("top.COMMONTOP_CLASSSESSIONEXECUTION"), {:controller => "class_sessions", :course_id => course.id}, class: "btn btn-primary" %><br/>
                <%= link_to t("top.STUDENTTOP_RESULT"), {:controller => "results", :course_id => course.id}, class: "btn btn-primary" %>
              </td>
            </tr>
            <tr class="visible-xs <%= (index % 2) == 0 ? 'even' : 'odd' %>">
              <!-- 科目名称 -->
              <td class="td-bold visible-xs" colspan="4"><%= course.course_name %></td>
            </tr>
            <tr class="visible-xs <%= (index % 2) == 0 ? 'even' : 'odd' %>">
              <!-- 担任者 -->
              <td class="td-bold td-nowrap visible-xs" colspan="2"><%= course.instructor_name %>&nbsp;</td>

              <!-- 系・学科・コース -->
              <td class="td-bold td-nowrap visible-xs" colspan="2"><%= course.major %></td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </div>

    <!-- アンカーボタン -->
    <div class="col-xs-12" id="open_course_list">
      <div class="pull-right">
        <a class="anchor" href="#course_list">
          <%= t("common.COMMON_TOP") %>
        </a>
      </div>
    </div>
  </div>
</div>

<br />

<!-- 登録した公開科目一覧 -->
<% if @open_courses.count > 0 %>
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <!-- タイトル -->
        <h3 class="panel-title">
          <span class="glyphicon glyphicon-education" aria-hidden="true"></span>
          <%= t("top.COMMONTOP_OPENCOURSELIST") %>
          <span class="badge pull-right"><%= t("common.COMMON_HITCOURSE", :param0 => @open_courses.count) %></span>
        </div>

        <div class="panel-body">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th><%= t("common.COMMON_NO1") %></th>
                <th><%= t("common.COMMON_DAY") %></th>
                <th><%= t("common.COMMON_HOUR") %></th>
                <th><%= t("common.COMMON_SCHOOLYEAR") %></th>
                <th><%= t("common.COMMON_SEASON") %></th>
                <th><%= t("common.COMMON_COURSENAME") %></th>
                <th><%= t("common.COMMON_INSTRUCTOR") %></th>
                <th><%= t("common.COMMON_MAJOR") %></th>
                <th><%= t("top.COMMONTOP_CLASSSESSIONEXECUTION") %></th>
              </tr>
            </thead>

            <% @open_courses.each.with_index(1) do |course, index| %>
              <tr>
                <!-- No. -->
                <td class="td-bold"><%= index %></td>

                <!-- 曜日 -->
                <td class="td-bold td-nowrap"><%= convert_day_cd(course.day_cd) %></td>

                <!-- 時限 -->
                <td class="td-bold td-nowrap"><%= convert_hour_cd(course.hour_cd) %></td>

                <!-- 年度 -->
                <td class="td-bold td-nowrap"><%= course.school_year %></td>

                <!-- 学期 -->
                <td class="td-bold td-nowrap"><%= convert_season_cd(course.season_cd) %></td>

                <!-- 科目名称 -->
                <td class="td-bold"><%= course.course_name %></td>

                <!-- 担任者 -->
                <td class="td-bold td-nowrap"><%= course.instructor_name %></td>

                <!-- 系・学科・コース -->
                <td class="td-bold td-nowrap"><%= course.major %></td>

                <!-- 授業実施画面 -->
                <td class="td-bold"><%= link_to t("top.COMMONTOP_CLASSSESSIONEXECUTION"), {:controller => "class_sessions", :course_id => course.id}, class: "btn btn-primary" %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>

      <!-- アンカーボタン -->
      <div class="col-sm-12">
        <div class="pull-right">
          <a class="anchor" href="#open_course_list">
            <%= t("common.COMMON_TOP") %>
          </a>
        </div>
      </div>
    </div>
  </div>
<% end %>
