<!-- スマートフォンタイトル　-->
<%= render :partial => "shared/smartphone", :locals => { title: t("execution.COMMONMATERIALSEXECUTION_TITLEEXECUTIONMULTIPLEFIB") } %>

<!-- 科目名称、タイトル、氏名 -->
<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <!-- 科目名称　-->
          <tr>
            <td class="col-xs-4">
              <%= t("execution.COMMONMATERIALSEXECUTION_TESTTITLE") %>
            </td>
            <td class="col-xs-8">
              <%= @generic_page.generic_page_title %>
            </td>
          </tr>

          <!-- テストタイトル　-->
          <tr>
            <td>
              <%= t("common.COMMON_TARGETNAME") %>
            </td>
            <td>
              <%= current_user.user_name %>
            </td>
          </tr>

          <!-- 氏名　-->
          <tr>
            <td>
              <%= t("execution.COMMONMATERIALSEXECUTION_EXAMINATIONCOUNT") %>
            </td>
            <td>
              <%= @latest_score.blank? ? 1 : @latest_score.answer_count + 1 %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-8 col-xs-12">
    <% if @generic_page.edit_file? %>
      <iframe id="question_file" srcdoc="<%== @generic_page.get_html_file %>" src="<%= material_path(@generic_page.id) %>" width="100%"></iframe>
    <% else %>
      <iframe id="question_file" src="<%= material_path(@generic_page.id) %>" width="100%"></iframe>
    <% end %>
  </div>
  <div class="col-sm-4 col-xs-12">
    <iframe id="multiple_fibMain" src="<%= url_for(:controller => "/multiplefibs", :action => :quiz, :id => @generic_page.id, :view_only => @is_view_only) %>" width="100%"></iframe>
  </div>
</div>
